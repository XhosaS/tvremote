<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:interpolator="@anim/standard_curve"
                android:duration="@integer/standard_press_in_duration_ms"
                android:valueTo="@fraction/entity_image_amati_pressed_scale"
                android:valueType="floatType"
                android:propertyName="scaleX"/>
            <objectAnimator
                android:interpolator="@anim/standard_curve"
                android:duration="@integer/standard_press_in_duration_ms"
                android:valueTo="@fraction/entity_image_amati_pressed_scale"
                android:valueType="floatType"
                android:propertyName="scaleY"/>
        </set>
    </item>
    <item android:state_focused="true">
        <set>
            <objectAnimator
                android:interpolator="@anim/standard_curve"
                android:duration="@integer/standard_focus_in_duration_ms"
                android:valueTo="@fraction/entity_image_amati_focused_scale"
                android:valueType="floatType"
                android:propertyName="scaleX"/>
            <objectAnimator
                android:interpolator="@anim/standard_curve"
                android:duration="@integer/standard_focus_in_duration_ms"
                android:valueTo="@fraction/entity_image_amati_focused_scale"
                android:valueType="floatType"
                android:propertyName="scaleY"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:interpolator="@anim/standard_curve"
                android:duration="@integer/standard_focus_out_duration_ms"
                android:valueTo="1"
                android:valueType="floatType"
                android:propertyName="scaleX"/>
            <objectAnimator
                android:interpolator="@anim/standard_curve"
                android:duration="@integer/standard_focus_out_duration_ms"
                android:valueTo="1"
                android:valueType="floatType"
                android:propertyName="scaleY"/>
        </set>
    </item>
</selector>
