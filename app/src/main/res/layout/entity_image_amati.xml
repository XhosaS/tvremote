<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/foreground_image_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/foreground_image_border"
            android:background="@color/G0p50"
            android:visibility="invisible"
            android:duplicateParentState="true"
            android:layout_width="@dimen/details_fg_2_3_compact_width"
            android:layout_height="@dimen/details_fg_2_3_compact_height"
            android:stateListAnimator="@animator/entity_image_border_amati_state"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.apps.tvsearch.widget.imagedownload.ImageDownloadView
            android:id="@+id/foreground_image"
            android:visibility="invisible"
            android:duplicateParentState="true"
            android:layout_width="@dimen/details_fg_2_3_compact_width"
            android:layout_height="@dimen/details_fg_2_3_compact_height"
            android:scaleType="centerCrop"
            android:elevation="1dp"
            android:stateListAnimator="@animator/entity_image_amati_state"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </FrameLayout>
</merge>
