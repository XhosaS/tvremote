<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_dialog"
    android:background="@drawable/setup_informational_dialog_amati_background"
    android:padding="@dimen/info_dialog_padding"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/info_dialog_width"
    android:layout_height="@dimen/info_dialog_height">
    <TextView
        android:textAppearance="@style/InfoDialogTitleTextAppearance"
        android:gravity="top"
        android:id="@+id/info_dialog_title"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:scrollbarThumbVertical="@drawable/setup_informational_dialog_amati_scrollbar_selector"
        android:id="@+id/info_dialog_content"
        android:background="@drawable/setup_informational_dialog_amati_content_background_selector"
        android:padding="@dimen/info_dialog_content_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_dialog_content_height"
        android:layout_marginTop="@dimen/info_dialog_content_marginTop"
        android:fadeScrollbars="false"
        android:layout_marginEnd="@dimen/info_dialog_content_marginEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_dialog_title">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/info_dialog_content_container"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/InfoDialogContentHeaderTextAppearance"
                android:id="@+id/info_dialog_content_header"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/InfoDialogContentBodyTextAppearance"
                android:id="@+id/info_dialog_content_body"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_dialog_content_body_marginTop"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textAppearance="@style/InfoDialogButtonTextAppearance"
        android:gravity="center"
        android:id="@+id/info_dialog_btn"
        android:background="@drawable/setup_informational_dialog_amati_btn_background_selector"
        android:paddingTop="@dimen/info_dialog_button_padding_top_and_bottom"
        android:paddingBottom="@dimen/info_dialog_button_padding_top_and_bottom"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/info_dialog_button_margin_bottom"
        android:text="@string/assistant_close_dialog_btn"
        android:paddingStart="@dimen/info_dialog_button_padding_start_and_end"
        android:paddingEnd="@dimen/info_dialog_button_padding_start_and_end"
        android:layout_marginStart="@dimen/info_dialog_button_margin_start"
        android:stateListAnimator="@animator/guided_action_button_animator_amati"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
