<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/super_header_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_blue"
    android:layout_marginBottom="@dimen/space_light_blue"
    android:layout_marginStart="@dimen/katniss_browse_padding_start"
    android:layout_marginEnd="@dimen/katniss_browse_padding_end">
    <TextView
        android:textAppearance="@style/h4MediumG200TextAppearance"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/super_header"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"/>
</FrameLayout>
