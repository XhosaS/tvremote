<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dsc_watson_main_padding_start"
        android:paddingEnd="@dimen/dsc_watson_main_padding_end">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/dsc_watson_setup_guidance_space_height"/>
        <ImageView
            android:id="@+id/guidance_icon"
            android:visibility="gone"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/guideline"/>
        <TextView
            android:textSize="36sp"
            android:textColor="@color/G200"
            android:id="@+id/guidance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/guidance_view_margin_top"
            android:fontFamily="sans-serif-light"
            android:lineHeight="44sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/guidance_icon"/>
        <com.google.android.apps.tvsearch.widget.imagedownload.ImageDownloadView
            android:id="@+id/apps_icon_1"
            android:visibility="gone"
            android:layout_width="@dimen/dsc_watson_default_logo_size"
            android:layout_height="@dimen/dsc_watson_default_logo_size"
            android:layout_marginTop="@dimen/dsc_watson_guidance_view_margin_top"
            android:src="@drawable/dsc_card_default_logo_1"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/guidance_title"/>
        <com.google.android.apps.tvsearch.widget.imagedownload.ImageDownloadView
            android:id="@+id/apps_icon_2"
            android:visibility="gone"
            android:layout_width="@dimen/dsc_watson_default_logo_size"
            android:layout_height="@dimen/dsc_watson_default_logo_size"
            android:layout_marginLeft="@dimen/dsc_watson_guidance_app_icon_margin_left"
            android:layout_marginTop="@dimen/dsc_watson_guidance_view_margin_top"
            android:src="@drawable/dsc_card_default_logo_2"
            app:layout_constraintStart_toEndOf="@+id/apps_icon_1"
            app:layout_constraintTop_toBottomOf="@+id/guidance_title"/>
        <com.google.android.apps.tvsearch.widget.imagedownload.ImageDownloadView
            android:id="@+id/apps_icon_3"
            android:visibility="gone"
            android:layout_width="@dimen/dsc_watson_default_logo_size"
            android:layout_height="@dimen/dsc_watson_default_logo_size"
            android:layout_marginLeft="@dimen/dsc_watson_guidance_app_icon_margin_left"
            android:layout_marginTop="@dimen/dsc_watson_guidance_view_margin_top"
            android:src="@drawable/dsc_card_default_logo_3"
            app:layout_constraintStart_toEndOf="@+id/apps_icon_2"
            app:layout_constraintTop_toBottomOf="@+id/guidance_title"/>
        <com.google.android.apps.tvsearch.widget.imagedownload.ImageDownloadView
            android:id="@+id/apps_icon_more"
            android:visibility="gone"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="@dimen/dsc_watson_guidance_app_icon_margin_left"
            android:layout_marginTop="@dimen/dsc_watson_guidance_view_margin_top"
            android:src="@drawable/dsc_card_default_logo_more"
            app:layout_constraintStart_toEndOf="@+id/apps_icon_3"
            app:layout_constraintTop_toBottomOf="@+id/guidance_title"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/G200"
            android:id="@+id/guidance_description_p1"
            android:layout_width="@dimen/dsc_watson_description_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dsc_watson_guidance_view_margin_top"
            android:fontFamily="sans-serif"
            android:lineHeight="24dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/apps_icon_1"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/G50"
            android:id="@+id/guidance_description_p2"
            android:layout_width="@dimen/dsc_watson_description_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dsc_watson_description_margin_top"
            android:alpha="0.7"
            android:fontFamily="sans-serif"
            android:lineHeight="24dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/guidance_description_p1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
