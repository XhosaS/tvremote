<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayCardViewGroup" parent="">
        <item name="android:paddingTop">@dimen/play_card_default_inset</item>
        <item name="android:paddingBottom">@dimen/play_card_default_inset</item>
        <item name="android:paddingStart">@dimen/play_card_default_inset</item>
        <item name="android:paddingEnd">@dimen/play_card_default_inset</item>
        <item name="playCardBackgroundColor">@color/play_card_light_background</item>
        <item name="playCardClipToOutline">true</item>
        <item name="playCardCornerRadius">@dimen/play_card_default_radius</item>
        <item name="playCardElevation">@dimen/play_card_default_elevation</item>
        <item name="playCardInset">@dimen/play_card_default_inset</item>
    </style>
    <style name="PlayHeaderListTabText" parent="@style/PlayMediumBoldText">
        <item name="android:textSize">@dimen/play_header_list_text_size</item>
        <item name="android:textColor">@color/play_header_list_tab_text_color</item>
        <item name="android:ellipsize">3</item>
        <item name="android:gravity">0x11</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/play_header_list_tab_padding_side</item>
        <item name="android:paddingEnd">@dimen/play_header_list_tab_padding_side</item>
    </style>
    <style name="PlayMediumBoldText" parent="@style/PlayGridBoldText">
    </style>
    <style name="PlayMediumPlainText" parent="@style/PlayPlainText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="PlayOnboardNavFooterButton" parent="">
        <item name="android:textAppearance">@style/PlayCardAction</item>
        <item name="android:textStyle">0x0</item>
        <item name="android:textColor">@color/play_action_button_text</item>
        <item name="android:gravity">0x11</item>
        <item name="android:background">@drawable/play_onboard_dark_button_bg</item>
        <item name="android:layout_width">-2</item>
        <item name="android:layout_height">-1</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/play_onboard__onboard_nav_footer_button_padding</item>
        <item name="android:paddingEnd">@dimen/play_onboard__onboard_nav_footer_button_padding</item>
    </style>
    <style name="PlaySearchBoxIdleText" parent="">
        <item name="android:paddingTop">@dimen/play_search_plate_idle_text_top_padding</item>
        <item name="android:paddingBottom">@dimen/play_search_plate_idle_text_bottom_padding</item>
        <item name="android:scaleType">4</item>
    </style>
    <style name="PlaySearchPlateActionButton" parent="">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="PlaySearchPlateNavigationButton" parent="">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_width">@dimen/play_search_plate_navigation_button_size</item>
        <item name="android:layout_height">@dimen/play_search_plate_navigation_button_size</item>
        <item name="android:transformPivotX">28dp</item>
        <item name="android:transformPivotY">24dp</item>
        <item name="android:layoutDirection">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="PlaySearchPlateTextContainer" parent="">
        <item name="android:layout_marginStart">@dimen/play_search_plate_text_container_margin</item>
        <item name="android:layout_marginEnd">@dimen/play_search_plate_text_container_margin</item>
    </style>
    <style name="PlaySearchSuggestionText.Suggested" parent="@style/PlaySearchSuggestionText">
        <item name="android:textColor">@color/play_fg_primary</item>
    </style>
</resources>
