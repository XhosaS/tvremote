<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/remote_layout"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/companion_bar_expanded_view_bottom_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:animateLayoutChanges="true"
    android:paddingHorizontal="16dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/remote_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toTopOf="@+id/dynamic_content"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="360dp">
        <FrameLayout
            android:id="@+id/trackpad_container"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:importantForAccessibility="yes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.tv.remote.virtual.ui.trackpad.TrackpadView
                android:id="@+id/trackpad_view"
                android:background="@drawable/cb_trackpad_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/virtual_remote_trackpad_content_description"
                app:indicator="@drawable/trackpad_indicator"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_gravity="center"
                android:id="@+id/trackpad_tooltip_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trackpad_tooltip_margin"
                android:text="@string/virtual_remote_trackpad_tooltip"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:focusedByDefault="true"/>
        </FrameLayout>
        <com.google.android.tv.remote.virtual.ui.trackpad.DpadView
            android:id="@+id/dpad_view"
            android:background="@null"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:importantForAccessibility="yes"
            app:centerDrawable="@drawable/cb_dpad_center_button"
            app:centerSizeFraction="44%"
            app:downDrawable="@drawable/cb_dpad_down_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftDrawable="@drawable/cb_dpad_left_button"
            app:rightDrawable="@drawable/cb_dpad_right_button"
            app:upDrawable="@drawable/cb_dpad_up_button"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dynamic_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <FrameLayout
            android:id="@+id/individual_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginVertical="12dp">
            <com.google.android.tv.remote.virtual.ui.trackpad.RemoteButton
                android:layout_gravity="start|center_vertical"
                android:id="@+id/back_event"
                android:background="@drawable/cb_circular_button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_gm_ic_keyboard_backspace_vd_theme_24"
                android:minWidth="72dp"
                android:minHeight="72dp"
                android:contentDescription="@string/back_dpad_button_content_description"
                app:tint="?attr/colorSecondary"/>
            <com.google.android.tv.remote.virtual.ui.trackpad.RemoteButton
                android:layout_gravity="center"
                android:id="@+id/home_event"
                android:background="@drawable/cb_circular_button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_gm_ic_home_vd_theme_24"
                android:minWidth="96dp"
                android:minHeight="96dp"
                android:contentDescription="@string/home"
                app:tint="?attr/colorSecondary"/>
            <com.google.android.tv.remote.virtual.ui.assistant.VirtualRemoteAssistantButton
                android:layout_gravity="end|center_vertical"
                android:id="@+id/assistant_button"
                android:background="@drawable/cb_circular_button_background"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/assistant"
                app:inactiveMoleculeColor="?attr/colorSecondary"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/volume_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <com.google.android.tv.remote.virtual.ui.trackpad.RemoteButton
                android:id="@+id/mute_event"
                android:background="@drawable/cb_selectable_button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_gm_ic_volume_off_vd_theme_24"
                android:minWidth="72dp"
                android:minHeight="72dp"
                android:contentDescription="@string/mute"
                android:layout_marginEnd="12dp"
                app:tint="@color/cb_mute_icon_color"/>
            <com.google.android.tv.remote.virtual.ui.trackpad.RemoteButton
                android:id="@+id/lower_volume_event"
                android:background="@drawable/cb_pill_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:src="@drawable/quantum_gm_ic_volume_down_vd_theme_24"
                android:minHeight="72dp"
                android:layout_weight="1"
                android:contentDescription="@string/lower_volume"
                app:tint="?attr/colorSecondary"/>
            <com.google.android.tv.remote.virtual.ui.trackpad.RemoteButton
                android:id="@+id/increase_volume_event"
                android:background="@drawable/cb_pill_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:src="@drawable/quantum_gm_ic_volume_up_vd_theme_24"
                android:minHeight="72dp"
                android:layout_weight="1"
                android:contentDescription="@string/increase_volume"
                app:tint="?attr/colorSecondary"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remote_playback_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:animateLayoutChanges="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/media_controls_upper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/media_controls_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/remote_content_thumbnail"
                    android:background="@drawable/companion_playback_image_background"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/companion_bar_playback_image_content_description"
                    android:clipToOutline="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="?attr/colorPrimary"
                    android:ellipsize="end"
                    android:id="@+id/remote_content_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:singleLine="true"
                    android:fontFamily="@font/google_sans_text"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/remote_content_subtitle"
                    app:layout_constraintEnd_toStartOf="@+id/remote_play_button"
                    app:layout_constraintStart_toEndOf="@+id/remote_content_thumbnail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    style="@style/TextAppearance.GoogleMaterial3.TitleMedium"/>
                <TextView
                    android:textColor="?attr/colorSecondary"
                    android:ellipsize="end"
                    android:id="@+id/remote_content_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="@font/google_sans_text_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/remote_content_title"
                    app:layout_constraintStart_toStartOf="@+id/remote_content_title"
                    app:layout_constraintTop_toBottomOf="@+id/remote_content_title"
                    style="@style/TextAppearance.GoogleMaterial3.TitleSmall"/>
                <com.google.android.tv.remote.virtual.ui.trackpad.RemoteButton
                    android:id="@+id/remote_play_button"
                    android:background="@drawable/cb_circular_button_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:contentDescription="@string/cb_content_description_play"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorSecondary"/>
                <ProgressBar
                    android:id="@+id/remote_playback_progressbar"
                    android:padding="14dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:indeterminateTint="?attr/colorSecondary"
                    app:layout_constraintBottom_toBottomOf="@+id/remote_play_button"
                    app:layout_constraintEnd_toEndOf="@+id/remote_play_button"
                    app:layout_constraintStart_toStartOf="@+id/remote_play_button"
                    app:layout_constraintTop_toTopOf="@+id/remote_play_button"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/media_controls_progress"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/media_controls_upper">
                <ImageButton
                    android:id="@+id/replay"
                    android:background="?attr/actionBarItemBackground"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="?attr/colorPrimary"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:contentDescription="@string/accessibility_seek_30s"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_replay_30_24dp"/>
                <ImageButton
                    android:id="@+id/forward"
                    android:background="?attr/actionBarItemBackground"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="?attr/colorPrimary"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:contentDescription="@string/accessibility_forward_30s"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_forward_30_24dp"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/timebar"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    app:haloRadius="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/forward"
                    app:layout_constraintStart_toEndOf="@+id/replay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:thumbRadius="8dp"
                    app:trackColorInactive="?android:attr/colorBackground"/>
                <TextView
                    android:textColor="?attr/colorPrimary"
                    android:id="@+id/elapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_text_medium"
                    android:layout_marginStart="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/timebar"
                    style="@style/TextAppearance.GoogleMaterial3.LabelSmall"/>
                <TextView
                    android:textColor="?attr/colorPrimary"
                    android:id="@+id/total_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_text_medium"
                    android:layout_marginEnd="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/timebar"
                    style="@style/TextAppearance.GoogleMaterial3.LabelSmall"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
