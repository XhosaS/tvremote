<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_component"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="8dp"
    android:importantForAccessibility="no"
    android:layout_marginHorizontal="0dp"
    android:paddingHorizontal="0dp">
    <FrameLayout
        android:id="@+id/thumbnail_view"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumbnail_view_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="@dimen/background_image_bottom_margin"
        android:importantForAccessibility="no"
        android:layout_marginHorizontal="0dp"
        android:paddingHorizontal="0dp">
        <ImageView
            android:id="@+id/title_thumbnail"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:alpha="0.9"/>
        <View
            android:layout_gravity="bottom"
            android:background="@drawable/thumbnail_gradient_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gradient_view_height"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/title_section"
        android:paddingLeft="@dimen/content_horizontal_spacing"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/content_horizontal_spacing"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:baselineAligned="false"
        android:importantForAccessibility="no"
        android:paddingHorizontal="@dimen/content_horizontal_spacing"
        android:paddingVertical="8dp">
        <com.google.android.material.chip.Chip
            android:id="@+id/link_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_section_children_vertical_margin"
            android:layout_marginBottom="@dimen/title_section_children_vertical_margin"
            android:layout_marginVertical="@dimen/title_section_children_vertical_margin"
            app:ensureMinTouchTargetSize="true"
            style="@style/Widget.GoogleTv.Chip.Assist.Elevated"/>
        <TextView
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:id="@+id/context_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_section_children_vertical_margin"
            android:layout_marginBottom="@dimen/title_section_children_vertical_margin"
            android:layout_marginVertical="@dimen/title_section_children_vertical_margin"
            app:textAllCaps="true"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/title_section_children_vertical_margin"
            android:layout_marginBottom="@dimen/title_section_children_vertical_margin"
            android:tint="?android:attr/textColorPrimary"
            android:contentDescription="@null"
            android:layout_marginVertical="@dimen/title_section_children_vertical_margin"/>
        <TextView
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="bottom"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/title_section_children_vertical_margin"
            android:layout_marginBottom="@dimen/title_section_children_vertical_margin"
            android:maxLines="3"
            android:layout_marginVertical="@dimen/title_section_children_vertical_margin"
            style="?attr/textAppearanceDisplayMediumAutoSize"/>
        <TextView
            android:gravity="bottom"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_section_children_vertical_margin"
            style="?attr/textAppearanceBodyLarge"/>
    </LinearLayout>
</FrameLayout>
