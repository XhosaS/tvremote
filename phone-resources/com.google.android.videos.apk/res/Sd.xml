<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:gravity="center"
        android:id="@+id/companion_discount_annotation"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/companion_watch_cta"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/cta_min_height">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/remote_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@null"
            android:elevation="0dp"
            app:backgroundTint="?attr/colorOnBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="@dimen/cta_min_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.GoogleTv.Button.TextButton"/>
        <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
            android:id="@+id/companion_watch_cta_play_icon"
            android:clickable="false"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:importantForAccessibility="no"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/companion_cta_text_size"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:id="@+id/companion_watch_cta_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_medium"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toTopOf="@+id/companion_watch_cta_subtitle_text"
            app:layout_constraintEnd_toStartOf="@+id/end_guideline"
            app:layout_constraintStart_toEndOf="@+id/companion_watch_cta_play_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextAppearance.GoogleMaterial3.TitleMedium"/>
        <TextView
            android:textSize="@dimen/companion_cta_subtitle_text_size"
            android:textColor="@color/m3_ref_palette_neutral60"
            android:id="@+id/companion_watch_cta_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_medium"
            android:letterSpacing="0.02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/companion_watch_cta_text"
            app:layout_constraintStart_toStartOf="@+id/companion_watch_cta_text"
            app:layout_constraintTop_toBottomOf="@+id/companion_watch_cta_text"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextAppearance.GoogleMaterial3.LabelMedium"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="42dp"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
