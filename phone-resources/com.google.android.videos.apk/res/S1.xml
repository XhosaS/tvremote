<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/channel_component"
    android:paddingTop="@dimen/channel_header_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ViewStub
        android:id="@+id/channel_header_view"
        android:inflatedId="@+id/channel_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/stream_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ViewStub
            android:id="@+id/loading_indicator"
            android:inflatedId="@+id/loading_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_gravity="left"
            android:id="@+id/tvm_featured_image"
            android:visibility="gone"
            android:layout_width="@dimen/tvm_featured_image_width"
            android:layout_height="@dimen/tvm_featured_image_height"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no"/>
        <View
            android:id="@+id/tvm_gradient_overlay_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/tvm_channel_overlay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.libraries.play.movies.symbian.recyclerview.ModelAwareRecyclerView
            android:orientation="vertical"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
        <ViewStub
            android:id="@+id/error_overlay"
            android:inflatedId="@+id/error_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_dots"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/carousel_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</LinearLayout>
