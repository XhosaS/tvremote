<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.userfeedback.UserFeedbackView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/feedback_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/details_userfeedback_left_right_margin"
    android:layout_marginTop="@dimen/details_userfeedback_margin_top"
    android:layout_marginRight="@dimen/details_userfeedback_left_right_margin">
    <LinearLayout
        android:id="@+id/thumb_up_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/DetailsUserFeedbackSectionItemImage">
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/thumb_up_button_image"
            style="@style/DetailsUserFeedbackSectionItem"/>
        <View
            android:id="@+id/gtv_thumb_up_button_image_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/thumb_up_button_text"
            android:text="@string/like"
            style="@style/DetailsUserFeedbackSectionItemText"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thumb_down_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/DetailsUserFeedbackSectionItemImage">
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/thumb_down_button_image"
            style="@style/DetailsUserFeedbackSectionItem"/>
        <View
            android:id="@+id/gtv_thumb_down_button_image_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/thumb_down_button_text"
            android:text="@string/dislike"
            style="@style/DetailsUserFeedbackSectionItemText"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/watchlist_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/DetailsUserFeedbackSectionItemImage">
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/watchlist_button_image"
            style="@style/DetailsUserFeedbackSectionItem"/>
        <View
            android:id="@+id/gtv_watchlist_button_image_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/watchlist_button_text"
            android:text="@string/button_add_to_wishlist"
            style="@style/DetailsUserFeedbackSectionItemText"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/download_button"
        android:paddingBottom="@dimen/details_vertical_spacing_tiny"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/download_button_image"
            android:visibility="gone"
            style="@style/DetailsUserFeedbackSectionItem"/>
        <View
            android:id="@+id/gtv_download_button_image_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <include
            android:id="@+id/feedback_section_download"
            android:focusable="true"
            layout="@layout/download_animation_userfeedback"
            style="@style/DetailsUserFeedbackSectionItem"/>
        <TextView
            android:id="@+id/download_button_text"
            android:text="@string/download"
            android:importantForAccessibility="no"
            style="@style/DetailsUserFeedbackSectionItemText"/>
    </LinearLayout>
</com.google.android.apps.play.movies.mobileux.screen.details.userfeedback.UserFeedbackView>
