<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobile.usecase.downloads.DownloadItemView xmlns:android="http://schemas.android.com/apk/res/android" style="@style/DownloadItemView">
    <ImageView
        android:id="@+id/thumbnail_frame"
        android:layout_width="64dp"
        android:layout_height="92.16dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/manage_downloads_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/play_card_standard_padding"
        android:layout_marginEnd="@dimen/play_card_standard_padding"
        android:layout_toStartOf="@+id/pin"
        android:layout_toEndOf="@+id/thumbnail_frame">
        <TextView
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/pin_download_animation_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:importantForAccessibility="noHideDescendants"
        android:layout_alignParentEnd="true">
        <include
            android:id="@+id/pin_download_animation"
            android:focusable="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/download_animation"/>
    </FrameLayout>
    <com.google.android.apps.play.movies.mobileux.component.downloadanimation.PreplayDownloadAnimationView
        android:id="@+id/pin"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</com.google.android.apps.play.movies.mobile.usecase.downloads.DownloadItemView>
