<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:gravity="top|center_horizontal"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:id="@+id/tvm_entity_card_component"
    android:paddingTop="@dimen/tvm_entity_card_padding_top"
    android:paddingBottom="@dimen/tvm_entity_card_padding_bottom"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:paddingStart="@dimen/channel_card_start_padding"
    android:paddingEnd="@dimen/channel_card_end_padding">
    <FrameLayout
        android:id="@+id/thumbnail_frame"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.apps.googletv.app.presentation.views.image.EntityImageView
            android:id="@+id/thumbnail"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            videos:cornerRadius="16dp"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/titled_text"
            android:padding="@dimen/tvm_entity_card_titled_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="?attr/textAppearanceBodyMediumAutoSize"/>
        <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
            android:layout_gravity="center"
            android:id="@+id/play_icon"
            android:focusable="true"
            android:layout_width="@dimen/continue_watching_play_icon_size"
            android:layout_height="@dimen/continue_watching_play_icon_size"
            android:importantForAccessibility="no"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="end|bottom"
            android:id="@+id/watch_list_icon"
            android:padding="@dimen/tvm_entity_card_watchlist_icon_outside_padding"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            videos:strokeWidth="0dp"
            style="?attr/materialIconButtonOutlinedStyle"/>
        <FrameLayout
            android:gravity="center"
            android:layout_gravity="end|bottom"
            android:id="@+id/download_view"
            android:padding="@dimen/tvm_entity_card_watchlist_icon_outside_padding"
            android:layout_width="@dimen/tvm_entity_card_action_icon_size"
            android:layout_height="@dimen/tvm_entity_card_action_icon_size"
            android:elevation="@dimen/tvm_entity_card_action_icon_elevation">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gtv_downloading_background"
                android:importantForAccessibility="no"/>
            <include
                android:layout_gravity="center"
                android:id="@+id/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                layout="@layout/gtv_download_animation_badge"/>
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/card_info"
        android:paddingTop="@dimen/tvm_entity_card_details_block_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tvm_entity_card_details_block_margin_start"
        android:layout_marginEnd="@dimen/tvm_entity_card_details_block_margin_end">
        <TextView
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tvm_entity_card_title_gap"
            android:singleLine="true"
            android:textDirection="locale"
            style="?attr/textAppearanceTitleSmall"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/tvm_entity_card_subtitle_height">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/lock_icon"
                android:layout_width="@dimen/tvm_entity_card_lock_icon_size"
                android:layout_height="@dimen/tvm_entity_card_lock_icon_size"
                android:src="@drawable/ic_lock_24dp"
                android:importantForAccessibility="no"
                android:layout_marginEnd="@dimen/tvm_entity_card_lock_icon_spacing"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/tvm_entity_card_subtitle_max_size"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/tvm_entity_card_rotten_tomatoes_ratting_spacing"
                    style="?attr/textAppearanceBodySmall"/>
                <com.google.android.apps.googletv.app.presentation.views.rottentomatoesrating.RottenTomatoesRatingView
                    android:id="@+id/rotten_tomatoes_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    videos:page_mode="stream_page"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
