<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.component.downloadanimation.DownloadAnimationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="24dp">
    <com.google.android.libraries.play.widget.downloadstatus.DownloadStatusView
        android:id="@+id/download_status"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/download_failure_status"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_download_off"
        android:contentDescription="@string/alert_download_failed"/>
</com.google.android.apps.play.movies.mobileux.component.downloadanimation.DownloadAnimationView>
