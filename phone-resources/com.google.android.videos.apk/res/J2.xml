<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    videos:layout_flmHeight="wrap_content"
    videos:layout_flmMarginEnd="@dimen/play_collection_edge_padding"
    videos:layout_flmMarginStart="@dimen/play_collection_edge_padding"
    videos:layout_flmMarginTop="@dimen/play_cluster_section_header_margin_top_minus_card_half_spacing"
    videos:layout_flmWidth="match_parent">
    <com.google.android.apps.play.movies.mobile.usecase.downloads.RatioBar
        android:id="@+id/storage_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        videos:colors="@array/storage_bar_colors"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/storage_bar_other"
            android:layout_width="4dp"
            android:layout_height="4dp"/>
        <TextView
            android:textColor="@color/storage_bar_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/used_storage_other"
            android:textAllCaps="true"
            android:layout_marginStart="4dp"/>
        <View
            android:background="@color/storage_bar_play_movies_downloaded"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="@dimen/play_card_standard_padding"/>
        <TextView
            android:textColor="@color/storage_bar_play_movies_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/used_storage_movies"
            android:textAllCaps="true"
            android:layout_marginStart="4dp"/>
        <View
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <View
            android:background="@color/storage_bar_play_movies_free"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textColor="@color/storage_bar_play_movies_free"
            android:id="@+id/free_space_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>
