<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/featured_carousel_card_component"
    android:paddingTop="@dimen/fc_card_vertical_side_padding"
    android:paddingBottom="@dimen/fc_card_vertical_side_padding"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/channel_card_start_padding"
    android:paddingEnd="@dimen/channel_card_end_padding"
    android:paddingVertical="@dimen/fc_card_vertical_side_padding">
    <com.google.android.apps.googletv.app.presentation.views.image.RoundedImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:aspectRatio="1.78"
        app:cornerRadius="24dp"/>
    <View
        android:id="@+id/bc25_gradient_layer_1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/bc25_gradient_layer_2"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/bc25_gradient_layer_3"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/bc25_gradient_layer_4"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <FrameLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:id="@+id/badge_block"
        android:background="@drawable/fc_gradient_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="start|top"
            android:id="@+id/badge"
            android:background="@drawable/fc_badge_border"
            android:paddingTop="@dimen/fc_card_badge_vertical_padding"
            android:paddingBottom="@dimen/fc_card_badge_vertical_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fc_card_badge_margin"
            android:paddingStart="@dimen/fc_card_badge_horizontal_padding"
            android:paddingEnd="@dimen/fc_card_badge_horizontal_padding"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/gradient"
        android:background="@drawable/fc_gradient"
        android:padding="@dimen/fc_card_blocks_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/provider_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fc_card_logo_height_w1"
            android:scaleType="fitStart"
            android:contentDescription="@null"/>
        <TextView
            android:textColor="@color/featured_carousel_text_color"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fc_card_title_top_padding"
            android:maxLines="2"
            style="?attr/textAppearanceTitleLarge"/>
        <TextView
            android:textColor="@color/featured_carousel_text_color"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fc_card_annotation_top_padding"
            android:maxLines="2"
            style="?attr/textAppearanceBodyMedium"/>
        <ImageView
            android:layout_gravity="end|top"
            android:id="@+id/fc_watch_list_icon"
            android:padding="@dimen/fc_card_watchlist_icon_outside_padding"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_to_wishlist"
            android:elevation="@dimen/fc_action_icon_elevation"/>
        <TextView
            android:id="@+id/action_button"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/action_button_bc25"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>
</FrameLayout>
