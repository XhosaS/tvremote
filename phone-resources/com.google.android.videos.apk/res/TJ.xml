<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="no">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/empty_state_margin_bottom"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/library_empty_state_title"
            android:importantForAccessibility="yes"
            style="@style/TextStyle.Movies.Headline.3"/>
        <TextView
            android:textColor="@color/gray_500"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="@string/library_movie_empty_state_subtitle"
            android:importantForAccessibility="yes"
            style="@style/TextStyle.Movies.Subhead.1"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/library_movie_empty_state_cta"
            android:importantForAccessibility="yes"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</FrameLayout>
