<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.player.infocards.actors.filmography.ActorFilmographyView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actor_filmography_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/filmography_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.libraries.play.widget.cardimageview.CardImageView
            android:id="@+id/filmography_item_poster"
            android:layout_width="@dimen/film_poster_image_width"
            android:layout_height="@dimen/show_poster_image_height"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:importantForAccessibility="no"/>
        <RelativeLayout
            android:id="@+id/filmography_item_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp">
            <TextView
                android:textColor="@color/gray_500"
                android:id="@+id/filmography_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingEnd="40dp"
                android:layout_alignParentStart="true"
                style="@style/TextStyle.Movies.Subtitle.2"/>
            <TextView
                android:textColor="@color/gray_600"
                android:id="@+id/filmography_years_and_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/filmography_item_title"
                android:paddingEnd="40dp"
                android:layout_alignParentStart="true"
                style="@style/TextStyle.Movies.Subtitle.2"/>
            <ImageButton
                android:id="@+id/filmography_item_watchlisted"
                android:background="@color/full_transparent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.apps.play.movies.mobileux.screen.player.infocards.actors.filmography.ActorFilmographyView>
