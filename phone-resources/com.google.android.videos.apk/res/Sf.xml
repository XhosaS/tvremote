<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entity_menu_title_component"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/entity_menu_title"
        android:paddingLeft="@dimen/replay__replaydialog_horizontal_padding"
        android:paddingTop="@dimen/replay__replaydialog_thumbnailheader_vertical_padding"
        android:paddingRight="@dimen/replay__replaydialog_horizontal_padding"
        android:paddingBottom="@dimen/replay__replaydialog_thumbnailheader_vertical_padding"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.apps.googletv.app.presentation.views.image.EntityImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:cornerRadius="4dp"/>
        <TextView
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/title"
            android:paddingLeft="@dimen/entity_menu_title_left_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="@dimen/replay__replaydialog_thumbnailheader_title_subtitle_margin"
            android:maxLines="2"
            android:layout_toRightOf="@+id/poster"
            android:layout_alignParentRight="true"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:layout_marginEnd="0dp"
            style="?attr/textAppearanceTitleMediumAutoSize"/>
        <com.google.android.apps.googletv.app.presentation.views.contentrating.ContentRatingView
            android:id="@+id/content_rating"
            android:paddingLeft="@dimen/entity_menu_title_left_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/entity_menu_subtitle_start_padding"
            android:layout_toRightOf="@+id/poster"
            android:layout_below="@+id/title"/>
        <TextView
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/subtitle"
            android:paddingLeft="@dimen/entity_menu_title_left_padding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/entity_menu_subtitle_start_padding"
            android:layout_marginRight="0dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/content_rating"
            android:layout_below="@+id/title"
            android:layout_alignParentRight="true"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:layout_marginEnd="0dp"
            style="?attr/textAppearanceCaption"/>
    </RelativeLayout>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/line"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/entity_menu_title"
        style="?attr/materialDividerStyle"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/replay__replaydialog_default_padding"
        android:layout_below="@+id/line"/>
</RelativeLayout>
