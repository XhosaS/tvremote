<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/tvm_entity_family_library_component"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/content_horizontal_spacing"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/content_horizontal_spacing"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/details_family_library_switch_section_min_height"
        android:paddingHorizontal="@dimen/content_horizontal_spacing"
        android:paddingVertical="8dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/family_library_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:paddingEnd="@dimen/details_familylibrary_icon_padding_end"
            app:srcCompat="@drawable/ic_family_home_24dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:id="@+id/family_library_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_family_library"
            android:importantForAccessibility="no"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/family_library_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/family_sharing_checked"
            android:textOff="@string/family_sharing_unchecked"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:contentDescription="@string/section_family_library"
            android:switchPadding="@dimen/details_item_spacing"
            android:importantForAccessibility="yes"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_more_card"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_spacing"
        android:layout_marginRight="@dimen/content_horizontal_spacing"
        android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
        style="?attr/materialCardViewOutlinedStyle">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_horizontal_spacing"
            android:layout_marginRight="@dimen/content_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
            android:paddingVertical="8dp">
            <TextView
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_sharing_title"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/show_sharing_message"
                android:layout_marginVertical="8dp"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_sharing_remove_all_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_sharing_remove_all_button_label"
                    android:layout_marginEnd="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_sharing_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_sharing_add_button_label"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
