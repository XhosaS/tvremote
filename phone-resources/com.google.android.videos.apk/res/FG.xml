<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/og_bento_toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:filterTouchesWhenObscured="true"
    android:animateLayoutChanges="true">
    <FrameLayout
        android:id="@+id/og_bento_toolbar_selected_account_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/og_bento_single_pane_account_menu_title_container"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/og_bento_single_pane_account_menu_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginHorizontal="44dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/og_bento_toolbar_close_button"
        android:background="?attr/actionBarItemBackground"
        android:padding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/og_a11y_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>
