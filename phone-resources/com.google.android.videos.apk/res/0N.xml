<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/device_page_layout"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qs_page_horizontal_margin"
            android:layout_marginRight="@dimen/qs_page_horizontal_margin"
            android:layout_marginHorizontal="@dimen/qs_page_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="start|top"
                android:id="@+id/page_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qs_page_margin_top"
                android:src="@drawable/celebration"
                android:tint="?attr/colorPrimary"
                android:contentDescription="@string/content_description_qs_celebration_icon"/>
            <TextView
                android:textAppearance="?attr/textAppearanceDisplaySmall"
                android:id="@+id/page_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wrap_content"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"
                android:text="@string/qs_title"
                android:layout_marginVertical="@dimen/content_vertical_margin"/>
            <TextView
                android:textSize="@dimen/prompt_text_size"
                android:id="@+id/exploration_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qs_exploration_prompt"/>
            <TextView
                android:textSize="@dimen/prompt_text_size"
                android:id="@+id/listed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginBottom="@dimen/content_vertical_margin"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/qs_home_button"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qs_card_height"
                android:layout_marginTop="@dimen/qs_card_vertical_margin"
                android:layout_marginBottom="@dimen/qs_card_vertical_margin"
                android:layout_marginVertical="@dimen/qs_card_vertical_margin"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                style="@style/QSActionCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/home_action_card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/qs_home_action_icon"
                        android:layout_width="@dimen/qs_icon_image_size"
                        android:layout_height="@dimen/qs_icon_image_size"
                        android:layout_marginLeft="@dimen/qs_card_item_horizontal_margin"
                        android:layout_marginRight="@dimen/qs_card_item_horizontal_margin"
                        android:src="@drawable/ic_google_tv_notification_icon"
                        android:tint="?attr/colorPrimary"
                        android:importantForAccessibility="no"
                        android:layout_marginHorizontal="@dimen/qs_card_item_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/home_action_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qs_card_item_horizontal_margin"
                        android:layout_marginRight="@dimen/qs_card_item_horizontal_margin"
                        android:maxHeight="@dimen/qs_card_title_max_height"
                        android:text="@string/qs_googletv_home_action_button"
                        android:maxLines="1"
                        android:layout_marginHorizontal="@dimen/qs_card_item_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/qs_home_action_icon"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/home_arrow"
                        android:layout_width="@dimen/qs_icon_arrow_size"
                        android:layout_height="@dimen/qs_icon_arrow_size"
                        android:layout_marginLeft="@dimen/qs_card_item_horizontal_margin"
                        android:layout_marginRight="@dimen/qs_card_item_horizontal_margin"
                        android:src="@drawable/ic_north_east_24dp"
                        android:tint="?attr/colorPrimary"
                        android:importantForAccessibility="no"
                        android:layout_marginHorizontal="@dimen/qs_card_item_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/qs_remote_button"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qs_card_height"
                android:layout_marginTop="@dimen/qs_card_vertical_margin"
                android:layout_marginBottom="@dimen/qs_card_vertical_margin"
                android:layout_marginVertical="@dimen/qs_card_vertical_margin"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                style="@style/QSActionCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/remote_action_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/qs_remote_action_icon"
                        android:layout_width="@dimen/qs_icon_image_size"
                        android:layout_height="@dimen/qs_icon_image_size"
                        android:layout_marginLeft="@dimen/qs_card_item_horizontal_margin"
                        android:layout_marginRight="@dimen/qs_card_item_horizontal_margin"
                        android:src="@drawable/ic_nest_remote"
                        android:tint="?attr/colorPrimary"
                        android:importantForAccessibility="no"
                        android:layout_marginHorizontal="@dimen/qs_card_item_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:id="@+id/remote_action_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qs_card_item_horizontal_margin"
                        android:layout_marginRight="@dimen/qs_card_item_horizontal_margin"
                        android:maxHeight="@dimen/qs_card_title_max_height"
                        android:text="@string/qs_virtual_remote_action_button"
                        android:maxLines="1"
                        android:layout_marginHorizontal="@dimen/qs_card_item_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/qs_remote_action_icon"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/remote_arrow"
                        android:layout_width="@dimen/qs_icon_arrow_size"
                        android:layout_height="@dimen/qs_icon_arrow_size"
                        android:layout_marginLeft="@dimen/qs_card_item_horizontal_margin"
                        android:layout_marginRight="@dimen/qs_card_item_horizontal_margin"
                        android:src="@drawable/ic_north_east_24dp"
                        android:tint="?attr/colorPrimary"
                        android:importantForAccessibility="no"
                        android:layout_marginHorizontal="@dimen/qs_card_item_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:textColor="?android:attr/textColorPrimaryInverse"
                android:layout_gravity="end"
                android:id="@+id/exit_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/exit_button_height"
                android:minWidth="@dimen/exit_button_width"
                android:text="@string/qs_done"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
