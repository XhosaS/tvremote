<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/channel_component"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/stream_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_fc_height"
        app:layout_constraintDimensionRatio="H,16:14"
        app:layout_constraintTop_toTopOf="parent">
        <ViewStub
            android:id="@+id/loading_indicator"
            android:inflatedId="@+id/loading_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_gravity="left"
            android:id="@+id/tvm_featured_image"
            android:visibility="gone"
            android:layout_width="@dimen/tvm_featured_image_width"
            android:layout_height="@dimen/tvm_featured_image_height"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no"/>
        <View
            android:id="@+id/tvm_gradient_overlay_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/tvm_channel_overlay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.viewpager.widget.ViewPager
            android:orientation="horizontal"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentEndPadding="0dp"
            app:contentStartPadding="0dp"/>
        <ViewStub
            android:id="@+id/error_overlay"
            android:inflatedId="@+id/error_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/stream_view">
        <com.google.android.material.tabs.TabLayout
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/tab_dots"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:importantForAccessibility="noHideDescendants"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            style="@style/Widget.Material3.TabLayout.OnSurface"/>
        <androidx.compose.ui.platform.ComposeView
            android:layout_gravity="end"
            android:id="@+id/carousel_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="noHideDescendants"
            android:layout_marginEnd="20dp"/>
        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </FrameLayout>
    <ViewStub
        android:id="@+id/channel_header_view"
        android:inflatedId="@+id/channel_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
