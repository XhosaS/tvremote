<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.tv.remote.virtual.ui.textedit.RemoteTextEdit
        android:textSize="36sp"
        android:gravity="top"
        android:layout_gravity="top"
        android:id="@+id/keyboard_edit_text"
        android:background="@null"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="26dp"
        android:lineSpacingExtra="4sp"
        android:fontFamily="@font/google_sans"
        android:layout_marginHorizontal="26dp"
        android:importantForAutofill="no"/>
    <LinearLayout
        android:gravity="top"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:id="@+id/no_input_field_layout"
        android:paddingTop="170dp"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="yes"
        android:paddingStart="22dp"
        android:paddingEnd="22dp">
        <TextView
            android:textSize="28sp"
            android:gravity="center"
            android:id="@+id/instruction_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/no_input_field_instruction_title"
            android:fontFamily="@font/google_sans"/>
        <TextView
            android:textSize="22sp"
            android:gravity="center"
            android:id="@+id/instruction_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_input_field_instruction_description"
            android:fontFamily="@font/google_sans"/>
        <FrameLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <EditText
                android:id="@+id/no_input_edit"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:inputType="textNoSuggestions"
                android:imeOptions="flagForceAscii"
                android:imeActionId="1"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
