<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_banner_card_component"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginLeft="@dimen/content_horizontal_spacing"
    android:layout_marginTop="@dimen/info_banner_card_margin_vertical"
    android:layout_marginRight="@dimen/content_horizontal_spacing"
    android:layout_marginBottom="@dimen/info_banner_card_margin_vertical"
    android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
    android:layout_marginVertical="@dimen/info_banner_card_margin_vertical"
    app:cardBackgroundColor="#ff18181b"
    app:cardCornerRadius="20dp"
    app:contentPadding="16dp"
    style="?attr/materialCardViewElevatedStyle">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="#ff949395"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="#ff949395"
            android:gravity="center"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:alpha="0.6"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/info_banner_card_cta"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/icon"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/image"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dismiss"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</com.google.android.material.card.MaterialCardView>
