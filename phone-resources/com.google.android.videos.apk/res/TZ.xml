<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/companion_bar_collapsed_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <View
        android:id="@+id/start_spacer"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/companion_bar_playback_image"
        android:background="@drawable/companion_playback_image_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/companion_bar_playback_image_content_description"
        android:clipToOutline="true"
        app:layout_constraintBottom_toTopOf="@+id/companion_bar_scrubber_elapsed"
        app:layout_constraintStart_toEndOf="@+id/start_spacer"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="?attr/colorPrimary"
        android:ellipsize="end"
        android:id="@+id/companion_bar_title"
        android:paddingBottom="@dimen/title_bottom_padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="@font/google_sans_text_medium"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/companion_bar_remote"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/companion_bar_playback_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp"
        style="@style/TextAppearance.GoogleMaterial3.LabelLarge"/>
    <TextView
        android:textColor="?attr/colorTertiary"
        android:id="@+id/companion_bar_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:maxLines="1"
        android:singleLine="true"
        android:drawablePadding="4dp"
        android:fontFamily="@font/google_sans_text_medium"
        android:drawableTint="?attr/colorTertiary"
        app:layout_constraintBottom_toTopOf="@+id/companion_bar_scrubber_elapsed"
        app:layout_constraintEnd_toEndOf="@+id/companion_bar_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/companion_bar_title"
        app:layout_constraintTop_toBottomOf="@+id/companion_bar_title"
        style="@style/TextAppearance.GoogleMaterial3.LabelSmall"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/companion_bar_disconnect"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:contentDescription="@string/accessibility_disconnect"
        app:backgroundTint="?attr/colorSurfaceVariant"
        app:icon="@drawable/quantum_gm_ic_tv_vd_theme_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/button_icon_size"
        app:iconTint="?attr/colorTertiary"
        app:layout_constraintBottom_toTopOf="@+id/companion_bar_scrubber_elapsed"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/companion_bar_play_button"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?android:attr/colorControlHighlight"
        style="?attr/materialIconButtonFilledStyle"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/companion_bar_remote"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:contentDescription="@string/companion_bar_remote_icon_content_description"
        app:backgroundTint="?attr/colorSurfaceVariant"
        app:icon="@drawable/ic_remote"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/button_icon_size"
        app:iconTint="?attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/companion_bar_scrubber_elapsed"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/companion_bar_disconnect"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?android:attr/colorControlHighlight"
        style="?attr/materialIconButtonFilledStyle"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/companion_bar_play_button"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:contentDescription="@string/cb_content_description_play"
        app:backgroundTint="?android:attr/colorBackground"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/button_icon_size"
        app:iconTint="?attr/colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/companion_bar_scrubber_elapsed"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/end_spacer"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?android:attr/colorControlHighlight"
        style="?attr/materialIconButtonFilledStyle"/>
    <ProgressBar
        android:id="@+id/companion_bar_playback_progressbar"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminateTint="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/companion_bar_play_button"
        app:layout_constraintEnd_toEndOf="@+id/companion_bar_play_button"
        app:layout_constraintStart_toStartOf="@+id/companion_bar_play_button"
        app:layout_constraintTop_toTopOf="@+id/companion_bar_play_button"/>
    <View
        android:id="@+id/end_spacer"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/companion_bar_divider"
        android:background="?attr/colorPrimaryContainer"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/companion_bar_scrubber_elapsed"
        android:background="?attr/colorTertiary"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5"/>
    <View
        android:id="@+id/companion_bar_scrubber_remaining"
        android:background="?attr/colorPrimaryContainer"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/companion_bar_scrubber_elapsed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
