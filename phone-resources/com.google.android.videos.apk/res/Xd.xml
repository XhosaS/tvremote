<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:play="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="16dp"
    play:layout_flmGridColumnCount="1"
    play:layout_flmHeight="wrap_content"
    play:layout_flmWidth="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <FrameLayout
            android:layout_gravity="top|left"
            android:id="@+id/image_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:contentDescription="@null"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="top|left"
            android:id="@+id/text_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/gray_050"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:id="@+id/first_line_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true"
                    style="@style/TextStyle.Movies.Subhead.1"/>
                <TextView
                    android:textColor="@color/gray_500"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:id="@+id/second_line_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle.Movies.Subtitle.2"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider_line"
        android:background="@color/gray_800"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
