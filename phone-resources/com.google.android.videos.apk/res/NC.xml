<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/tvm_entity_action_panel_component"
    android:paddingLeft="@dimen/content_horizontal_spacing"
    android:paddingTop="@dimen/entity_action_panel_top_padding"
    android:paddingRight="@dimen/content_horizontal_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:importantForAccessibility="no"
    android:paddingHorizontal="@dimen/content_horizontal_spacing">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/companion_cast_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/companion_cast_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gs_info_vd_theme_24"
            android:tint="?android:attr/textColorSecondary"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.GoogleMaterial3.LabelSmall"/>
        <TextView
            android:textColor="?android:attr/textColorSecondary"
            android:id="@+id/companion_disclaimer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/companion_cast_info"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ViewStub
        android:id="@+id/ai_overview_cta_layout"
        android:inflatedId="@+id/ai_overview_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/companion_cta_layout"
        android:visibility="gone"
        android:inflatedId="@+id/companion_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/companion_watch_local_cta_layout"
        android:visibility="gone"
        android:inflatedId="@+id/companion_watch_local_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/rent_provider_cta_layout"
        android:inflatedId="@+id/rent_provider_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/purchase_provider_cta_layout"
        android:inflatedId="@+id/purchase_provider_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/cancel_preorder_cta_layout"
        android:inflatedId="@+id/cancel_preorder_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/show_episodes_cta_layout"
        android:inflatedId="@+id/show_episodes_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <View
        android:id="@+id/watch_actions_spacer"
        android:layout_width="12dp"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/download_cta_layout"
        android:inflatedId="@+id/download_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:minHeight="@dimen/cta_min_height"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/purchase_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:importantForAccessibility="no">
        <ViewStub
            android:id="@+id/rent_cta_layout"
            android:inflatedId="@+id/rent_cta_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cta_vertical_margin"
            android:layout_marginBottom="@dimen/cta_vertical_margin"
            android:minHeight="@dimen/cta_min_height"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/cta_vertical_margin"/>
        <View
            android:id="@+id/purchase_actions_spacer"
            android:layout_width="12dp"
            android:layout_height="match_parent"/>
        <ViewStub
            android:id="@+id/purchase_cta_layout"
            android:inflatedId="@+id/purchase_cta_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cta_vertical_margin"
            android:layout_marginBottom="@dimen/cta_vertical_margin"
            android:minHeight="@dimen/cta_min_height"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    </LinearLayout>
    <ViewStub
        android:id="@+id/my_episodes_cta_layout"
        android:inflatedId="@+id/my_episodes_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
    <ViewStub
        android:id="@+id/more_providers_cta_layout"
        android:inflatedId="@+id/more_providers_cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cta_vertical_margin"
        android:layout_marginBottom="@dimen/cta_vertical_margin"
        android:layout_marginVertical="@dimen/cta_vertical_margin"/>
</LinearLayout>
