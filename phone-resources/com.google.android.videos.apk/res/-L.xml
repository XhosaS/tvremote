<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:contentDescription="@null"
        app:backgroundTint="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="@dimen/cta_min_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.GoogleTv.Button.TextButton"/>
    <View
        android:id="@+id/start_spacer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/icon_shop_container"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:strokeWidth="0dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_shop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gs_shopping_bag_fill1_vd_theme_24"
            android:contentDescription="@null"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:textAppearance="?attr/textAppearanceButton"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:id="@+id/button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/end_spacer"
        app:layout_constraintStart_toEndOf="@+id/start_spacer"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorSurfaceVariant"
        android:id="@+id/button_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button_title"
        app:layout_constraintStart_toStartOf="@+id/button_title"
        app:layout_constraintTop_toBottomOf="@+id/button_title"/>
    <android.support.constraint.Guideline
        android:orientation="vertical"
        android:id="@+id/end_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="32dp"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:id="@+id/button_annotation"
        android:paddingTop="@dimen/discount_annotation_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/button_title"
        app:layout_constraintStart_toStartOf="@+id/button_title"
        app:layout_constraintTop_toBottomOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
