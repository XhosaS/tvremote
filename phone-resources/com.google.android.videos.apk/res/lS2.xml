<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/live_tv_card_component"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/channel_card_start_padding"
    android:paddingEnd="@dimen/channel_card_end_padding">
    <com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout
        android:id="@+id/image_card"
        android:focusable="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.GoogleTv.CardView.Transparent">
            <com.google.android.apps.googletv.app.presentation.views.image.EntityImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/titled_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                style="?attr/textAppearanceBodyMediumAutoSize"/>
            <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
                android:layout_gravity="center"
                android:id="@+id/play_overlay"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="@dimen/continue_watching_play_icon_size"
                android:layout_height="@dimen/continue_watching_play_icon_size"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_gravity="bottom"
                android:background="@drawable/live_text_background"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/live"
                android:layout_marginHorizontal="8dp"
                android:paddingHorizontal="4dp"
                style="?attr/textAppearanceBodySmall"/>
            <ProgressBar
                android:layout_gravity="bottom"
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:progressTint="@color/google_red500"
                android:progressBackgroundTint="#ccffffff"
                android:layout_marginHorizontal="8dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:minHeight="48dp"
        android:layout_marginHorizontal="4dp">
        <TextView
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:textDirection="locale"
            style="?attr/textAppearanceBodyMedium"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="?attr/textAppearanceCaption"/>
    </LinearLayout>
</LinearLayout>
