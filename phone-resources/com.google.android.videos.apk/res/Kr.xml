<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/banner_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_card_height">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/poster_banner_title_section"
        android:paddingLeft="@dimen/banner_title_section_padding_start"
        android:paddingTop="@dimen/title_section_padding_vertical"
        android:paddingRight="@dimen/banner_title_section_padding_start"
        android:paddingBottom="@dimen/title_section_padding_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/title_section_layout_weight"
        android:paddingHorizontal="@dimen/banner_title_section_padding_start"
        android:paddingVertical="@dimen/title_section_padding_vertical">
        <TextView
            android:id="@+id/banner_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            style="@style/BannerTitle"/>
        <TextView
            android:textAppearance="?attr/textAppearanceLabelSmall"
            android:id="@+id/banner_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/banner_title_button"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_section"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="@integer/poster_image_layout_weight"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardCornerRadius="12dp"
        style="?attr/materialCardViewFilledStyle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_section_layout"
            android:paddingLeft="@dimen/poster_image_section_padding_horizontal"
            android:paddingRight="@dimen/poster_image_section_padding_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/poster_image_section_padding_horizontal">
            <TextView
                android:textColor="#8ab4f8"
                android:id="@+id/image_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toTopOf="@+id/image_description_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/PosterBanner.ImageTag"/>
            <TextView
                android:id="@+id/image_description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/image_description_space"
                app:layout_constraintEnd_toStartOf="@+id/middle_vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_tag"
                style="@style/PosterBanner.DescriptionText"/>
            <Space
                android:id="@+id/image_description_space"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/promotion_section"
                app:layout_constraintEnd_toStartOf="@+id/middle_vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/promotion_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:flexDirection="row_reverse"
                app:flexWrap="wrap_reverse"
                app:justifyContent="flex_end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/middle_vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_description_text">
                <TextView
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:id="@+id/new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    android:id="@+id/promotion_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/middle_vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <ImageView
                android:id="@+id/poster_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:contentDescription="@null"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/middle_vertical_guideline"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
