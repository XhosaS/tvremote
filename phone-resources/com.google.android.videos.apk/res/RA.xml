<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/my_episodes_toolbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_show_details_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/details_button_horizontal_margin"
        android:layout_marginRight="@dimen/details_button_horizontal_margin"
        android:maxWidth="@dimen/details_button_width_wide"
        android:text="@string/go_to_show_details"
        android:layout_marginHorizontal="@dimen/details_button_horizontal_margin"
        app:icon="@drawable/ic_arrow_forward_24dp"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/details_button_icon_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        style="?attr/materialIconButtonOutlinedStyle"/>
</LinearLayout>
