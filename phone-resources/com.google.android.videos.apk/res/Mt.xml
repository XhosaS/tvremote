<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/pairing"
    android:background="@drawable/pairing_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/pairing_title_color"
        android:id="@+id/pairing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtual_remote_pairing_explanation"
        style="@style/PairingTextAppearance"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/pairing_error_color"
        android:id="@+id/pairing_error_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtual_remote_pairing_error_text"
        style="@style/PairingTextAppearance"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/pairing_pin_boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pairing_vertical_margin">
        <EditText
            android:id="@+id/pairing_pin1"
            android:layout_width="@dimen/pairing_pin_width"
            android:layout_height="@dimen/pairing_pin_height"
            style="@style/PinCode"/>
        <EditText
            android:id="@+id/pairing_pin2"
            android:layout_width="@dimen/pairing_pin_width"
            android:layout_height="@dimen/pairing_pin_height"
            style="@style/PinCode"/>
        <EditText
            android:id="@+id/pairing_pin3"
            android:layout_width="@dimen/pairing_pin_width"
            android:layout_height="@dimen/pairing_pin_height"
            style="@style/PinCode"/>
        <EditText
            android:id="@+id/pairing_pin4"
            android:layout_width="@dimen/pairing_pin_width"
            android:layout_height="@dimen/pairing_pin_height"
            style="@style/PinCode"/>
        <EditText
            android:id="@+id/pairing_pin5"
            android:layout_width="@dimen/pairing_pin_width"
            android:layout_height="@dimen/pairing_pin_height"
            style="@style/PinCode"/>
        <EditText
            android:id="@+id/pairing_pin6"
            android:layout_width="@dimen/pairing_pin_width"
            android:layout_height="@dimen/pairing_pin_height"
            style="@style/PinCode"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pairing_vertical_margin">
        <Button
            android:textColor="@color/pairing_accent_color"
            android:layout_gravity="end|bottom"
            android:id="@+id/pairing_cancel"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/remote_dialog_button_height"
            android:text="@string/virtual_remote_pairing_cancel"
            android:singleLine="true"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:enabled="false"
            android:textColor="@color/pair_button_color"
            android:layout_gravity="end|bottom"
            android:id="@+id/pairing_ok"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/remote_dialog_button_height"
            android:text="@string/virtual_remote_pairing_pair"
            android:singleLine="true"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
