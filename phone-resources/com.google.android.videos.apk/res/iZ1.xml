<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobile.usecase.details.MovieExtraClusterItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cluster_item_movie_extra"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    videos:layout_flmStyle="@style/FlowGridItem.Large"
    videos:thumbnailAspectRatio="1.777"
    videos:thumbnailMeasureMode="span_horizontal"
    style="@style/CardItemView">
    <com.google.android.libraries.play.widget.cardimageview.CardImageView
        android:id="@+id/thumbnail_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ProgressBar
        android:id="@+id/watch_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/thumbnail_frame"
        android:progressTint="@color/gray_050"
        android:progressBackgroundTint="@color/gray_900"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <ImageView
        android:id="@+id/synopsis_target"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail_frame"
        android:contentDescription="@string/accessibility_synopsis"
        android:layout_alignEnd="@+id/thumbnail_frame"
        videos:srcCompat="0x7f080702"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/title"
        android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_card_standard_padding_minus_8dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/synopsis_target"
        android:layout_below="@+id/thumbnail_frame"
        android:layout_marginStart="@dimen/play_card_standard_padding"
        android:layout_alignParentStart="true"
        style="@style/TextStyle.Movies.Subhead.2"/>
    <TextView
        android:id="@+id/duration"
        android:paddingBottom="@dimen/play_card_standard_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/title"
        android:layout_marginStart="@dimen/play_card_standard_padding"
        android:layout_marginEnd="@dimen/play_card_standard_padding"
        style="@style/TextStyle.Movies.Caption"/>
</com.google.android.apps.play.movies.mobile.usecase.details.MovieExtraClusterItemView>
