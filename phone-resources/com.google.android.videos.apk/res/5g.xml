<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/provider_selection_menu_header_side_padding"
        android:paddingTop="@dimen/provider_selection_menu_header_top_padding"
        android:paddingRight="@dimen/provider_selection_menu_header_side_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout
            android:id="@+id/thumbnail_frame"
            android:layout_width="@dimen/provider_selection_menu_header_screenshot_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/provider_selection_menu_header_screenshot_margin_to_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:aspectRatio="1.78"
            app:inset="6dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/thumbnail_cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/provider_selection_menu_header_screenshot_corner_radius">
                <ImageView
                    android:id="@+id/screenshot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:importantForAccessibility="no"/>
            </androidx.cardview.widget.CardView>
        </com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thumbnail_frame"
            android:layout_alignParentTop="true">
            <TextView
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                style="?attr/textAppearanceTitleSmall"/>
            <TextView
                android:textColor="?android:attr/textColorSecondary"
                android:ellipsize="end"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                style="?attr/textAppearanceBodySmall"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/synopsis"
        android:paddingLeft="@dimen/provider_selection_menu_header_side_padding"
        android:paddingRight="@dimen/provider_selection_menu_header_side_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/provider_selection_menu_header_synopsis_margin_top"
        style="?attr/textAppearanceBodyMedium"/>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/provider_selection_menu_header_bottom_padding"/>
</LinearLayout>
