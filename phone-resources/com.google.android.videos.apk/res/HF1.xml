<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/channel_header_view"
    android:paddingLeft="@dimen/content_horizontal_spacing"
    android:paddingRight="@dimen/content_horizontal_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/content_horizontal_spacing">
    <ImageView
        android:gravity="start"
        android:id="@+id/tvm_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/enhanced_cluster_logo_image_height"
        android:layout_marginTop="10dp"
        android:importantForAccessibility="no"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/min_height_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/channel_header_min_height">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/channel_header_icon"
            android:layout_width="@dimen/channel_header_icon_size"
            android:layout_height="@dimen/channel_header_icon_size"
            android:layout_marginRight="@dimen/channel_header_min_internal_spacing"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no"
            android:layout_marginEnd="@dimen/channel_header_min_internal_spacing"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/channel_header_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/channel_header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textAlignment="viewStart"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/channel_header_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:alpha="0.7"
                android:textAlignment="viewStart"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/channel_refresh_img"
            android:layout_width="@dimen/channel_header_arrow_size"
            android:layout_height="@dimen/channel_header_arrow_size"
            android:layout_marginLeft="@dimen/channel_header_arrow_spacing"
            android:scaleType="fitCenter"
            android:tint="?attr/colorControlNormal"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/channel_header_arrow_spacing"
            app:srcCompat="@drawable/ic_refresh_24dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/channel_header_arrow_img"
            android:layout_width="@dimen/channel_header_arrow_size"
            android:layout_height="@dimen/channel_header_arrow_size"
            android:layout_marginLeft="@dimen/channel_header_arrow_spacing"
            android:scaleType="fitCenter"
            android:tint="?attr/colorControlNormal"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/channel_header_arrow_spacing"
            app:srcCompat="@drawable/ic_arrow_forward_gtv_theme_24"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/channel_header_arrow_img_bc25"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/channel_header_arrow_spacing"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/channel_header_arrow_spacing"
            app:icon="@drawable/gs_chevron_right_vd_theme_20"
            app:materialSizeOverlay="@style/SizeOverlay.GoogleMaterial3Expressive.Button.IconButton.Xsmall.Narrow"
            style="@style/Bc25ArrowButton"/>
    </LinearLayout>
</LinearLayout>
