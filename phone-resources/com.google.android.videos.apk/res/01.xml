<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/value_proposition"
    android:background="@color/pelog_main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/value_proposition_background_pelog"
        android:layout_weight="1"
        android:contentDescription="@null"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vp_title_horizontal_margin"
        android:layout_marginTop="@dimen/vp_top_margin"
        android:layout_marginRight="@dimen/vp_title_horizontal_margin"
        android:text="@string/value_proposition_title"
        style="@style/Value_Proposition_Title"/>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vp_subtitle_horizontal_margin"
        android:layout_marginTop="@dimen/vp_top_margin"
        android:layout_marginRight="@dimen/vp_subtitle_horizontal_margin"
        android:text="@string/value_proposition_subtitle"
        style="@style/Value_Proposition_SubTitle"/>
    <ImageButton
        android:id="@+id/navigation_button"
        android:background="@drawable/navigation_button_shape"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/ic_next_button_grey200"
        android:contentDescription="@string/primetime_setup_next"/>
</LinearLayout>
