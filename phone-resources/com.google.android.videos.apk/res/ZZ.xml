<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvod_player_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.media3.ui.PlayerView
        android:id="@+id/tvod_player_view"
        android:background="@color/gm3_ref_palette_neutral0"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:animation_enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/fold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/fold"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.media3.ui.PlayerControlView
        android:id="@+id/tabletop_control_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/player_text_container"
        android:background="@drawable/content_rating_gradient"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_rating_margin_top"
        android:layout_marginStart="@dimen/content_rating_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:background="@android:color/white"
            android:layout_width="@dimen/content_rating_bar_width"
            android:layout_height="@dimen/content_rating_bar_height"/>
        <TextView
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:layout_gravity="center_vertical"
            android:id="@+id/rating_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/content_rating_text_padding_start"/>
    </LinearLayout>
    <ViewStub
        android:id="@+id/binge_watch_card"
        android:inflatedId="@+id/binge_watch_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/binge_watch_card_margin_right"
        android:layout_marginBottom="@dimen/binge_watch_card_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <include
        android:id="@+id/player_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/watch_activity_actionbar_height"
        android:layout_marginTop="@dimen/toolbar_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/player_toolbar_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
