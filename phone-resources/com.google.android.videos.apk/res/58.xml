<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/card"
    android:paddingBottom="@dimen/asset_card_padding_bottom"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/asset_card_side_padding"
    android:paddingEnd="@dimen/asset_card_side_padding"
    videos:layout_flmHeight="wrap_content"
    videos:spanSize="@dimen/grid_view_item_span_size">
    <com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout
        android:id="@+id/thumbnail_frame"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        videos:aspectRatio="0.694">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            videos:cornerRadius="16dp"
            videos:inset="@dimen/asset_card_inset"
            videos:strokeColor="?attr/colorSurface">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"/>
            <ImageView
                android:layout_gravity="start|bottom"
                android:id="@+id/play_button"
                android:padding="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                videos:srcCompat="@drawable/ic_play_arrow_with_bg"/>
            <FrameLayout
                android:gravity="center"
                android:layout_gravity="end|bottom"
                android:id="@+id/download_button"
                android:padding="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_downloading_background"/>
                <include
                    android:layout_gravity="center"
                    android:id="@+id/download_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/play_card_default_elevation"
                    layout="@layout/gtv_download_animation_badge"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout>
    <FrameLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/asset_card_details_block_margin_top"
        android:layout_marginStart="@dimen/asset_card_details_block_margin_start"
        android:layout_marginEnd="@dimen/asset_card_details_block_margin_end">
        <TextView
            android:id="@+id/title"
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="start"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceCaption"/>
    </FrameLayout>
</LinearLayout>
