<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.synopsis.SynopsisView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/synopsis_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no"
    style="@style/DetailsPageSectionLayout">
    <TextView
        android:id="@+id/details_synopsis_header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_marginStart="0dp"
        style="@style/DetailsPageSectionHeader"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/synopsis_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextStyle.Movies.Body.2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/read_more"
            android:background="@color/full_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_alignBottom="@+id/synopsis_text"
            android:layout_alignEnd="@+id/synopsis_text">
            <View
                android:layout_gravity="bottom"
                android:background="@drawable/details_synopsis_read_more_fade"
                android:clickable="false"
                android:layout_width="32dp"
                android:layout_height="12dp"/>
            <TextView
                android:layout_gravity="bottom"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_more"
                android:paddingStart="4dp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/actors_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/details_item_spacing"
        style="@style/TextStyle.Movies.Body.2"/>
    <TextView
        android:id="@+id/directors_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/details_item_spacing_small"
        style="@style/TextStyle.Movies.Body.2"/>
    <TextView
        android:id="@+id/writers_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/details_item_spacing_small"
        style="@style/TextStyle.Movies.Body.2"/>
    <TextView
        android:id="@+id/producers_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/details_item_spacing_small"
        style="@style/TextStyle.Movies.Body.2"/>
    <TextView
        android:gravity="end|bottom"
        android:layout_gravity="end|bottom"
        android:id="@+id/read_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="@string/details_less"/>
</com.google.android.apps.play.movies.mobileux.screen.details.synopsis.SynopsisView>
