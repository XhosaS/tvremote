<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/continue_watching_card_component"
    android:paddingTop="@dimen/continue_watching_card_details_block_margin_top"
    android:paddingBottom="@dimen/continue_watching_card_bottom_padding"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/channel_card_start_padding"
    android:paddingEnd="@dimen/channel_card_end_padding">
    <com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout
        android:id="@+id/image_card"
        android:focusable="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:aspectRatio="@dimen/continue_watching_card_aspect_ratio">
        <com.google.android.material.card.MaterialCardView
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.GoogleTv.CardView.Transparent">
            <com.google.android.apps.googletv.app.presentation.views.image.EntityImageView
                android:id="@+id/image"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                app:cornerRadius="16dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/titled_text"
                android:padding="@dimen/continue_watching_titled_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                style="?attr/textAppearanceBodyMediumAutoSize"/>
            <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
                android:layout_gravity="center"
                android:id="@+id/play_overlay"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="@dimen/continue_watching_play_icon_size"
                android:layout_height="@dimen/continue_watching_play_icon_size"
                android:importantForAccessibility="no"/>
            <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
                android:layout_gravity="center"
                android:id="@+id/play_overlay_bc25"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:importantForAccessibility="no"/>
            <ProgressBar
                android:layout_gravity="bottom"
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                style="@style/ContinueWatchingProgressBar"/>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_gravity="bottom"
                android:id="@+id/progress_bar_bc25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="6dp"
                android:indeterminate="false"
                app:trackColor="#444746"
                style="@style/Widget.GoogleMaterial3.LinearProgressIndicator"/>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/continue_watching_card_info_horizontal_margin"
        android:layout_marginTop="@dimen/continue_watching_card_info_vertical_margin"
        android:layout_marginRight="@dimen/continue_watching_card_info_horizontal_margin"
        android:minHeight="@dimen/continue_watching_card_info_min_height"
        android:layout_marginHorizontal="@dimen/continue_watching_card_info_horizontal_margin">
        <TextView
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/continue_watching_card_title_margin"
            android:maxLines="1"
            android:textDirection="locale"
            style="?attr/textAppearanceBodyMedium"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="?attr/textAppearanceCaption"/>
    </LinearLayout>
</LinearLayout>
