<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/alertDialogButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show alert dialog"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/simpleDialogButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/simpleDialogButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show simple dialog"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alertDialogButton"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/singleChoiceConfirmationDialogButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show single-choice confirmation dialog"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/multiChoiceConfirmationDialogButton"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiChoiceConfirmationDialogButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show multi-choice confirmation dialog"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/singleChoiceConfirmationDialogButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/allDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Alert Dialog with everything"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
