<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="80dp">
        <FrameLayout
            android:layout_gravity="top"
            android:id="@+id/status_bar_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <include
            android:visibility="gone"
            layout="@layout/appbar"/>
        <include
            android:visibility="gone"
            layout="@layout/appbar_immersive"/>
        <ProgressBar
            android:id="@+id/loading_progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/google_grey100"
            style="?android:attr/progressBarStyle"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/destination_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <include
            android:visibility="gone"
            layout="@layout/appbar"/>
        <include
            android:visibility="gone"
            layout="@layout/appbar_immersive"/>
        <android.support.constraint.ConstraintLayout
            android:layout_gravity="end|bottom"
            android:orientation="vertical"
            android:id="@+id/fab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="end|bottom"/>
        <com.google.android.apps.googletv.app.device.presentation.fab.MediaDeviceFloatingActionButton
            android:layout_gravity="bottom|right"
            android:id="@+id/media_device_fab"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemMinHeight="@dimen/m3_navigation_rail_item_min_height"
        app:menuGravity="center"/>
    <fragment
        android:layout_gravity="bottom"
        android:id="@+id/companion_bar_fragment"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="80dp"
        app:layout_anchorGravity="end|bottom"
        class="com.google.android.apps.googletv.app.device.presentation.companionbar.CompanionBarFragment"/>
</RelativeLayout>
