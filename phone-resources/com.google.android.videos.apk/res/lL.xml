<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/alt_play_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1px"
        android:layout_marginBottom="@dimen/play_header_list_header_shadow_height">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/hero_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:id="@+id/header_shadow"
        android:background="@drawable/play_header_list_shadow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_header_list_header_shadow_height"/>
    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_container"/>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.apps.play.movies.mobileux.component.playheaderlist.PlayHeaderStatusBarUnderlay
        android:id="@+id/play_header_status_bar_underlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:id="@+id/play_header_banner"
        android:background="@drawable/play_header_list_layout_banner_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/parental_control_min_height"
        android:accessibilityLiveRegion="polite"
        style="@style/PlayHeaderListBannerText"/>
    <include layout="@layout/movies_play_header_list_pull_refresh"/>
    <fragment
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        class="com.google.android.apps.play.movies.mobile.usecase.watch.MiniControllerFragment"/>
</merge>
