<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/error_bottomsheet_horizontal_padding"
    android:paddingTop="@dimen/error_bottomsheet_top_padding"
    android:paddingRight="@dimen/error_bottomsheet_horizontal_padding"
    android:paddingBottom="@dimen/error_bottomsheet_bottom_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/error_bottomsheet_horizontal_padding">
    <View
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bottomsheet_handle_bg"
        android:layout_width="@dimen/error_bottomsheet_handle_width"
        android:layout_height="@dimen/error_bottomsheet_handle_height"
        android:layout_marginBottom="@dimen/error_bottomsheet_handle_bottom_margin"/>
    <TextView
        android:textAppearance="?attr/textAppearanceTitleLargeAutoSize"
        android:id="@+id/error_bottomsheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/error_bottomsheet_title_bottom_margin"
        android:text="@string/something_went_wrong"
        android:fontFamily="@font/google_sans_text"/>
    <TextView
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/error_bottomsheet_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/error_bottomsheet_body_bottom_margin"
        android:text="@string/bottom_sheet_title_select_device"
        android:maxLines="5"
        style="?attr/textAppearanceBodyMediumAutoSize"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottom_sheet_retry_button"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/try_again"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:paddingVertical="16dp"
            style="@style/Widget.GoogleTv.Button"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottom_sheet_close_button"
            android:paddingTop="@dimen/error_bottomsheet_cta_vertical_padding"
            android:paddingBottom="@dimen/error_bottomsheet_cta_vertical_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/accessibility_close_button"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:paddingVertical="@dimen/error_bottomsheet_cta_vertical_padding"
            style="@style/Widget.GoogleTv.Button.ElevatedButton"/>
    </LinearLayout>
</LinearLayout>
