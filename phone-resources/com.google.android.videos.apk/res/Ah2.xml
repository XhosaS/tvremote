<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/right_panel"
        android:background="@drawable/side_panel_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/left_panel"
        android:background="@drawable/side_panel_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/scrub_scrim"
        android:background="#4d000000"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/replay__pal_gray_050"
            android:id="@+id/feedback_text"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/TextStyle.Movies.Headline.6"/>
        <ImageButton
            android:id="@+id/rewind_10_s"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/rewind_10_seconds"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@+id/combined_play_spinner"
            android:layout_alignBottom="@+id/combined_play_spinner"
            android:contentDescription="@string/accessibility_rewind_10s"/>
        <FrameLayout
            android:id="@+id/combined_play_spinner"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="32dp"
            android:layout_below="@+id/feedback_text"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/pause"
                android:background="@android:color/transparent"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/player_pause_replay"
                android:scaleType="fitCenter"
                android:contentDescription="@string/accessibility_pause"/>
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/play"
                android:background="@android:color/transparent"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/player_play_replay"
                android:scaleType="fitCenter"
                android:contentDescription="@string/accessibility_play"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/loading_spinner"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/forward_10_s"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/forward_10_seconds"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/combined_play_spinner"
            android:layout_alignBottom="@+id/combined_play_spinner"
            android:contentDescription="@string/accessibility_forward_10s"/>
        <TextView
            android:gravity="center"
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cast_pressed_scrubber_radius"
            android:layout_below="@+id/timebar"
            android:layout_alignParentLeft="true"
            style="@style/PlayMoviesControlBarTime"/>
        <TextView
            android:gravity="center"
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/cast_pressed_scrubber_radius"
            android:layout_below="@+id/timebar"
            android:layout_alignParentRight="true"
            android:importantForAccessibility="no"
            style="@style/PlayMoviesControlBarTime"/>
        <com.google.android.apps.play.movies.mobile.usecase.watch.TimeBar
            android:id="@+id/timebar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_bar_height"
            android:layout_below="@+id/combined_play_spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            videos:bufferedBarColor="@color/replay__pal_gray_400"
            videos:durationTextView="@+id/duration"
            videos:playedBarColor="@color/gray_200"
            videos:pressedScrubberRadius="@dimen/cast_pressed_scrubber_radius"
            videos:progressBarColor="@color/replay__pal_gray_700"
            videos:progressTextView="@+id/progress"
            videos:railHeight="2.5dp"
            videos:scrubberRadius="10dp"
            videos:scrubberStateListDrawable="@drawable/scrubber"/>
    </RelativeLayout>
    <include layout="@layout/cast_scrubber_overlay"/>
</merge>
