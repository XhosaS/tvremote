<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/card"
    android:paddingBottom="@dimen/asset_card_padding_bottom"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/asset_card_side_padding"
    android:paddingEnd="@dimen/asset_card_side_padding"
    videos:layout_flmHeight="wrap_content"
    videos:spanSize="@dimen/list_view_item_span_size">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thumbnail_frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        videos:cornerRadius="16dp"
        videos:layout_constraintBottom_toBottomOf="parent"
        videos:layout_constraintStart_toStartOf="parent"
        videos:layout_constraintTop_toTopOf="parent"
        videos:strokeColor="?attr/colorSurface">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            videos:cornerRadius="16dp"/>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        videos:layout_constraintStart_toEndOf="@+id/thumbnail_frame"
        videos:layout_constraintTop_toTopOf="parent">
        <TextView
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/asset_card_title_gap"
            android:maxLines="1"
            android:textDirection="locale"
            style="?attr/textAppearanceTitleMedium"/>
        <TextView
            android:gravity="start"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceCaption"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
