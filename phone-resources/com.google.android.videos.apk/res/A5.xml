<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/textButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            style="@style/Widget.GoogleTv.Button.TextButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            app:icon="@drawable/ic_refresh_24_dp"
            style="@style/Widget.GoogleTv.Button.TextButton.Icon"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/outlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide"
            style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide"
            app:icon="@drawable/ic_hide_24dp"
            style="@style/Widget.GoogleTv.Button.OutlinedButton.Icon"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/unelevatedContainedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show (Unelevated)"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconUnelevatedContainedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show (Unelevated)"
            app:icon="@drawable/ic_show_24dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/raisedContainedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show (Raised)"
            style="@style/Widget.GoogleTv.Button.ElevatedButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconRaisedContainedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show (Raised)"
            app:icon="@drawable/ic_show_24dp"
            style="@style/Widget.GoogleTv.Button.ElevatedButton.Icon"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleSingleSelectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Toggle single selection (gtv button)"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleSelectionRequiredButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle selection required"/>
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:orientation="horizontal"
            android:id="@+id/toggleGroupHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleButton1Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleButton2Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom"
                style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleButton3Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:orientation="vertical"
            android:id="@+id/toggleGroupVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleButton1Vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:text="None"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleButton2Vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:text="Custom"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleButton3Vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:text="All"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
