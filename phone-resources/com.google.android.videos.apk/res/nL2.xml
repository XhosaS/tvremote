<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/replay__clusterheader__icon"
        android:visibility="gone"
        android:layout_width="@dimen/replay__imagewidth__xsmall"
        android:layout_height="@dimen/replay__imagewidth__xsmall"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@dimen/replay__clusterheader__min_internal_spacing"
        android:scaleType="fitCenter"
        android:importantForAccessibility="no"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/replay__clusterheader__min_internal_spacing"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/replay__clusterheader__title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="viewStart"
            style="?attr/textAppearanceHeadline6"/>
        <TextView
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/replay__clusterheader__subtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textAlignment="viewStart"
            style="?attr/textAppearanceBody2"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/replay__clusterheader__more"
        android:visibility="gone"
        android:layout_width="@dimen/replay__clusterheader__arrow_size"
        android:layout_height="@dimen/replay__clusterheader__arrow_size"
        android:layout_marginLeft="@dimen/replay__clusterheader__arrow_spacing"
        android:layout_marginRight="0dp"
        android:scaleType="fitCenter"
        android:tint="?attr/colorAccent"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/replay__clusterheader__arrow_spacing"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/quantum_gm_ic_arrow_forward_vd_theme_24"/>
</merge>
