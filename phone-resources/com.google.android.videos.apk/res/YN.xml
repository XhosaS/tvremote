<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobile.usecase.watch.bingewatch.BingeWatchCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom|right"
    android:visibility="gone"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/binge_watch_card_width"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/binge_watch_card_margin_right"
    android:layout_marginBottom="@dimen/controller_overlay_margin_bottom">
    <com.google.android.play.layout.ForegroundRelativeLayout
        android:background="@color/material_blue_grey_900"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/thumbnail_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/binge_watch_card_thumbnail_height"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/thumbnail_frame"
            android:layout_alignParentRight="true"
            style="@style/PlayMoviesCardTitle.Big"/>
        <TextView
            android:id="@+id/up_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/binge_watch_up_next"
            android:layout_below="@+id/thumbnail_frame"
            android:layout_alignParentLeft="true"
            style="@style/PlayMoviesCardTitle.Mini"/>
        <TextView
            android:id="@+id/episode_number_and_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/up_next"
            android:layout_alignParentLeft="true"
            style="@style/PlayMoviesCardTitle"/>
    </com.google.android.play.layout.ForegroundRelativeLayout>
</com.google.android.apps.play.movies.mobile.usecase.watch.bingewatch.BingeWatchCard>
