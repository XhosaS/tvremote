<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/article_card_component"
    android:paddingLeft="8dp"
    android:paddingTop="@dimen/article_card_vertical_padding"
    android:paddingRight="8dp"
    android:paddingBottom="@dimen/article_card_vertical_padding"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:animateLayoutChanges="true"
    android:paddingHorizontal="8dp"
    android:paddingVertical="@dimen/article_card_vertical_padding">
    <com.google.android.material.chip.Chip
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:id="@+id/heading_annotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_spacing"
        android:layout_marginRight="@dimen/content_horizontal_spacing"
        android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
        style="@style/Widget.GoogleTv.Chip.Assist.Elevated"/>
    <com.google.android.apps.googletv.app.presentation.views.image.EntityImageView
        android:id="@+id/primary_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_spacing"
        android:layout_marginTop="@dimen/article_card_content_top_margin"
        android:layout_marginRight="@dimen/content_horizontal_spacing"
        android:scaleType="centerCrop"
        android:alpha="0.9"
        android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
        app:cornerRadius="24dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/title_section"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_spacing"
        android:layout_marginTop="@dimen/article_card_content_top_margin"
        android:layout_marginRight="@dimen/content_horizontal_spacing"
        android:layout_marginBottom="@dimen/article_card_content_top_margin"
        android:baselineAligned="false"
        android:importantForAccessibility="no"
        android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
        android:layout_marginVertical="@dimen/article_card_content_top_margin">
        <TextView
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/action_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:gravity="center_vertical"
                android:id="@+id/footer_annotation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/expand_more_button"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:contentDescription="@string/see_more_article"
                app:icon="@drawable/ic_expand_more_cards"
                style="?attr/materialIconButtonStyle"/>
            <com.google.android.material.button.MaterialButton
                android:enabled="true"
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/share"
                app:icon="@drawable/ic_share_24dp"
                style="?attr/materialIconButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
    <ViewStub
        android:id="@+id/related_component"
        android:inflatedId="@+id/related_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/heading_annotation_text"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/news_article_card"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</LinearLayout>
