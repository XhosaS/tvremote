<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobile.view.widget.MovieBundleItemCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:importantForAccessibility="yes">
    <com.google.android.apps.play.movies.mobileux.view.widget.BasicCardItemView
        android:id="@+id/thumbnail_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:playCardCornerRadius="@dimen/grid_item_poster_round_corner_radius_replay"
        app:playCardInset="0dp"
        style="@style/CardItemView">
        <ImageView
            android:id="@+id/thumbnail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"/>
        <RelativeLayout
            android:id="@+id/play_button_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no">
            <ImageView
                android:id="@+id/play_button"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:importantForAccessibility="yes"
                app:srcCompat="@drawable/ic_play_button_32dp"/>
        </RelativeLayout>
    </com.google.android.apps.play.movies.mobileux.view.widget.BasicCardItemView>
    <RelativeLayout
        android:paddingTop="@dimen/details_bundle_item_info_spacing_top"
        android:paddingBottom="@dimen/details_bundle_item_info_spacing_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:paddingStart="@dimen/details_bundle_item_info_spacing_start"
        android:paddingEnd="@dimen/details_bundle_item_info_spacing_end"
        android:layout_toEndOf="@+id/thumbnail_frame">
        <TextView
            android:textColor="@color/gray_200"
            android:ellipsize="end"
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_title_section_vertical_padding"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            style="@style/TextStyle.Movies.Subtitle.2"/>
        <TextView
            android:textColor="@color/gray_500"
            android:ellipsize="end"
            android:id="@+id/details_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_bundle_item_info_subtitle_spacing"
            android:maxLines="1"
            android:layout_below="@+id/details_title"
            android:layout_alignParentStart="true"
            style="@style/TextStyle.Movies.Caption"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_subtitle"
            android:layout_alignParentStart="true"
            layout="@layout/details_ratings"/>
        <include
            android:id="@+id/download_icon"
            android:background="@drawable/selectable_item_circular_background"
            android:padding="@dimen/play_download_button_progress_arc_width_large"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            layout="@layout/download_animation"
            style="@style/DownloadViewLarge"/>
    </RelativeLayout>
</com.google.android.apps.play.movies.mobile.view.widget.MovieBundleItemCardView>
