<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/new_provider_card_component"
    android:paddingLeft="@dimen/content_horizontal_spacing"
    android:paddingRight="@dimen/content_horizontal_spacing"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/new_provider_card_margin_bottom"
    android:paddingHorizontal="@dimen/content_horizontal_spacing">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/new_provider_card"
        android:layout_width="@dimen/match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewFilledStyle">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.GoogleTv.Button.IconButton.Dismiss"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/new_provider_content"
            android:paddingLeft="@dimen/new_provider_content_horizontal_side_padding"
            android:paddingTop="@dimen/new_provider_content_top_padding"
            android:paddingRight="@dimen/new_provider_content_horizontal_side_padding"
            android:paddingBottom="@dimen/new_provider_content_bottom_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/new_provider_content_horizontal_side_padding">
            <RelativeLayout
                android:id="@+id/provider_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/new_provider_icon_margin_vertical"
                android:importantForAccessibility="no">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/new_provider_icon_size"
                    android:layout_height="@dimen/new_provider_icon_size"
                    android:layout_marginRight="@dimen/new_provider_icon_margin_horizontal"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/new_provider_subtitle_top_margin"
                    android:layout_below="@+id/title"
                    android:layout_toEndOf="@+id/icon"/>
            </RelativeLayout>
            <TextView
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans"
                android:textAlignment="textStart"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:id="@+id/annotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_provider_annotation_top_margin"
                android:textAlignment="textStart"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
