<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_banner_card_component"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginLeft="@dimen/content_horizontal_spacing"
    android:layout_marginTop="@dimen/info_banner_card_margin_vertical"
    android:layout_marginRight="@dimen/content_horizontal_spacing"
    android:layout_marginBottom="@dimen/info_banner_card_margin_vertical"
    android:layout_marginHorizontal="@dimen/content_horizontal_spacing"
    android:layout_marginVertical="@dimen/info_banner_card_margin_vertical"
    app:cardBackgroundColor="#ff18181b"
    app:cardCornerRadius="20dp"
    app:contentPadding="16dp"
    style="?attr/materialCardViewElevatedStyle">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gs_movie_filter_auto_vd_theme_24"
            android:tint="#ff949395"
            android:contentDescription="@null"
            android:importantForAccessibility="no"/>
        <TextView
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="#ff949395"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="2"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dismiss"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:backgroundTint="#ff202022"
            app:icon="@drawable/gs_close_vd_theme_24"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconTint="#ff949395"
            style="?attr/materialIconButtonStyle"/>
    </LinearLayout>
    <TextView
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/info_banner_card_cta"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/image"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"/>
</com.google.android.material.card.MaterialCardView>
