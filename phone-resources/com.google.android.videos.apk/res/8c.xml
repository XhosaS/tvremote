<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/article_card_vertical_padding"
    android:paddingBottom="@dimen/article_card_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/article_card_bottom_margin_card_layout"
    android:paddingStart="@dimen/channel_card_start_padding"
    android:paddingEnd="@dimen/channel_card_end_padding"
    android:paddingVertical="@dimen/article_card_vertical_padding">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/article_card_component"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_card_height_card_layout"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:contentPaddingBottom="@dimen/article_card_content_bottom_padding"
        style="?attr/materialCardViewFilledStyle">
        <com.google.android.material.chip.Chip
            android:id="@+id/heading_annotation"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/title_section"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/article_card_horizontal_margin"
            android:layout_marginTop="@dimen/article_card_content_top_margin"
            android:layout_marginRight="@dimen/article_card_horizontal_margin"
            android:baselineAligned="false"
            android:importantForAccessibility="no"
            android:layout_marginHorizontal="@dimen/article_card_horizontal_margin">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:ellipsize="end"
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_weight="1"
                    app:lineHeight="20dp"/>
                <ImageView
                    android:id="@+id/primary_image"
                    android:background="@drawable/article_image_shape"
                    android:layout_width="@dimen/article_card_small_image_width"
                    android:layout_height="@dimen/article_card_small_image_height"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    android:layout_marginStart="@dimen/article_card_image_start_margin"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/action_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:gravity="center_vertical"
                    android:id="@+id/footer_annotation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/expand_more_button"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/see_more_article"
                    app:icon="@drawable/ic_expand_more_cards"
                    style="?attr/materialIconButtonStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/share"
                    app:icon="@drawable/ic_share_24dp"
                    style="?attr/materialIconButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
        <ViewStub
            android:id="@+id/related_component"
            android:inflatedId="@+id/related_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/heading_annotation_text"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/news_article_card"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</FrameLayout>
