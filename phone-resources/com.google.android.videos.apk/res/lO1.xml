<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.title.TitleSectionView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_section"
    android:paddingTop="@dimen/details_titlesection_padding_top"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no"
    style="@style/DetailsPageSectionLayout">
    <com.google.android.apps.play.movies.mobileux.component.downloadanimation.PreplayDownloadAnimationView
        android:id="@+id/download"
        android:background="@drawable/selectable_item_circular_background"
        android:padding="12dp"
        android:paddingTop="28dp"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        style="@style/DownloadViewLarge"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/title_section_info_area"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:importantForAccessibility="no"
        android:layout_toStartOf="@+id/download">
        <com.google.android.libraries.play.widget.cardimageview.CardImageView
            android:id="@+id/thumbnail_frame"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:layout_width="@dimen/details_movie_poster_width"
            android:layout_height="0dp"
            android:importantForAccessibility="yes"
            android:layout_marginEnd="@dimen/details_poster_spacing"
            app:inset="0dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="no">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/google_min_touch_target_size"
                android:maxLines="3"
                style="@style/TextStyle.Movies.Headline.4"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="yes">
                <ImageView
                    android:id="@+id/content_rating_image"
                    android:paddingTop="@dimen/details_label_vertical_padding"
                    android:paddingBottom="@dimen/details_label_vertical_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_item_spacing_small"/>
                <TextView
                    android:ellipsize="none"
                    android:id="@+id/content_rating"
                    android:background="@drawable/border_rect"
                    android:paddingTop="@dimen/details_label_vertical_padding"
                    android:paddingBottom="@dimen/details_label_vertical_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="@dimen/details_label_horizontal_padding"
                    android:paddingEnd="@dimen/details_label_horizontal_padding"
                    android:layout_marginEnd="@dimen/details_item_spacing_small"
                    style="@style/TextStyle.Movies.Overline"/>
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    style="@style/TextStyle.Movies.Caption"/>
                <TextView
                    android:ellipsize="none"
                    android:id="@+id/audio_description"
                    android:background="@drawable/border_rect"
                    android:paddingTop="@dimen/details_label_vertical_padding"
                    android:paddingBottom="@dimen/details_label_vertical_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_audio_description"
                    android:maxLines="1"
                    android:contentDescription="@string/accessibility_audio_description"
                    android:paddingStart="@dimen/details_label_horizontal_padding"
                    android:paddingEnd="@dimen/details_label_horizontal_padding"
                    android:layout_marginStart="@dimen/details_item_spacing_small"
                    style="@style/TextStyle.Movies.Overline"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes">
                <TextView
                    android:id="@+id/star_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_item_spacing"
                    style="@style/TextStyle.Movies.Caption"/>
                <TextView
                    android:id="@+id/tomato_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_item_spacing"
                    style="@style/TextStyle.Movies.Caption"/>
                <TextView
                    android:id="@+id/bundle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_item_spacing"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/badge_4k"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/content_description_4k_badge"
                    android:layout_marginEnd="@dimen/details_item_spacing"
                    app:srcCompat="@drawable/ic_4k_badge_material_24dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.apps.play.movies.mobileux.screen.details.title.TitleSectionView>
