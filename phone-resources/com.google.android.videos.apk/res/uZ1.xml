<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/companion_bar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <View
        android:id="@+id/companion_bar_scrim"
        android:background="?attr/scrimBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/companion_bar_view"
        android:background="@drawable/companion_bar_background"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:animateLayoutChanges="true"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">
        <FrameLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp">
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/close_button"
                    android:background="?attr/actionBarItemBackground"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="?attr/colorOnBackground"
                    android:contentDescription="@string/companion_bar_collapse_icon_content_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_close_24dp"/>
                <TextView
                    android:id="@+id/device_title"
                    android:paddingBottom="@dimen/title_bottom_padding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/companion_bar_connected"
                    app:layout_constraintBottom_toTopOf="@+id/device_subtitle"
                    app:layout_constraintEnd_toStartOf="@+id/disconnect_button"
                    app:layout_constraintStart_toEndOf="@+id/close_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textColor="?attr/colorTertiary"
                    android:ellipsize="end"
                    android:id="@+id/device_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="4dp"
                    android:drawableTint="?attr/colorTertiary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/device_title"
                    app:layout_constraintStart_toStartOf="@+id/device_title"
                    app:layout_constraintTop_toBottomOf="@+id/device_title"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/disconnect_button"
                    android:padding="0dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:insetLeft="4dp"
                    android:insetRight="4dp"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:contentDescription="@string/accessibility_disconnect"
                    app:backgroundTint="?attr/colorPrimaryContainer"
                    app:icon="@drawable/quantum_gm_ic_tv_vd_theme_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/button_icon_size"
                    app:iconTint="?attr/colorTertiary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/keyboard_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="?android:attr/colorControlHighlight"
                    style="?attr/materialIconButtonFilledStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keyboard_button"
                    android:padding="0dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:insetLeft="4dp"
                    android:insetRight="4dp"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:contentDescription="@string/accessibility_keyboard_button"
                    app:backgroundTint="?attr/colorPrimaryContainer"
                    app:icon="@drawable/gm_filled_keyboard_vd_theme_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/button_icon_size"
                    app:iconTint="?attr/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/power_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="?android:attr/colorControlHighlight"
                    style="?attr/materialIconButtonFilledStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/power_button"
                    android:padding="0dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:insetLeft="4dp"
                    android:insetRight="4dp"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:contentDescription="@string/accessibility_power_button"
                    app:backgroundTint="?attr/colorPrimaryContainer"
                    app:icon="@drawable/ic_power_rounded_24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/button_icon_size"
                    app:iconTint="?attr/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/track_menu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="?android:attr/colorControlHighlight"
                    style="?attr/materialIconButtonFilledStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/track_menu"
                    android:padding="0dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:insetLeft="4dp"
                    android:insetRight="4dp"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:contentDescription="@string/accessibility_track_button"
                    app:backgroundTint="?attr/colorPrimaryContainer"
                    app:icon="@drawable/quantum_gm_ic_closed_caption_off_vd_theme_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/button_icon_size"
                    app:iconTint="?attr/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/overflow_menu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="?android:attr/colorControlHighlight"
                    style="?attr/materialIconButtonFilledStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/overflow_menu"
                    android:padding="0dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:insetLeft="4dp"
                    android:insetRight="4dp"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:contentDescription="@string/accessibility_overflow"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="?attr/colorPrimaryContainer"
                    app:icon="@drawable/ic_more_vert_24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/button_icon_size"
                    app:iconTint="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="?android:attr/colorControlHighlight"
                    style="?attr/materialIconButtonFilledStyle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
        <ViewStub
            android:id="@+id/expanded_remote_companion_bar_view"
            android:inflatedId="@+id/expanded_remote_companion_bar_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_container"/>
        <ViewStub
            android:id="@+id/expanded_media_companion_bar_view"
            android:inflatedId="@+id/expanded_media_companion_bar_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_container"/>
        <android.support.v4.app.FragmentContainerView
            android:id="@+id/keyboard_fragment"
            android:background="?attr/colorSurface"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_container"/>
        <ViewStub
            android:id="@+id/collapsed_companion_bar_view"
            android:inflatedId="@+id/collapsed_companion_bar_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
