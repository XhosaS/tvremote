<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/no_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    videos:layout_flmFlow="under"
    videos:layout_flmHeight="match_parent"
    videos:layout_flmWidth="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/no_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/no_content_text_horizontal_spacing"
        android:layout_marginEnd="@dimen/no_content_icon_landscape_end_padding"/>
    <TextView
        android:textColor="@color/play_movies_secondary_text"
        android:layout_gravity="center"
        android:id="@+id/no_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/no_content_text_horizontal_spacing"/>
</LinearLayout>
