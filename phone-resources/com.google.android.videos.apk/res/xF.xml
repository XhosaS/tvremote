<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.trailers.TrailerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no">
    <RelativeLayout
        android:id="@+id/trailer_item_view"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/details_trailers_item_height"
        android:importantForAccessibility="no">
        <com.google.android.libraries.play.widget.cardimageview.CardImageView
            android:id="@+id/details_trailers_item_thumbnail"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"/>
        <ImageButton
            android:id="@+id/details_trailers_item_play_button"
            android:background="@null"
            android:layout_width="@dimen/details_trailer_play_size"
            android:layout_height="@dimen/details_trailer_play_size"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:contentDescription="@string/accessibility_play_trailer"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/details_trailers_item_title"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/replay__cardimageview__default_inset"
        android:layout_marginTop="8dp"
        android:importantForAccessibility="no"
        style="@style/TextStyle.Movies.Subhead.2"/>
</com.google.android.apps.play.movies.mobileux.screen.details.trailers.TrailerItemView>
