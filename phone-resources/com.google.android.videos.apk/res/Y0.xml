<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.actionpanel.ActionPanelView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/button_pair_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:importantForAccessibility="no"
    style="@style/DetailsPageSectionLayout">
    <TextView
        android:textColor="@color/gray_900"
        android:gravity="center"
        android:id="@+id/multiple_discounts_annotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discounts_available"
        android:contentDescription="@string/discounts_available"
        style="@style/TextStyle.Movies.Caption"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/secondary_action_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="no">
            <TextView
                android:textColor="@color/gray_200"
                android:gravity="center"
                android:id="@+id/secondary_discount_annotation"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Movies.Caption"/>
            <com.google.android.material.button.MaterialButton
                android:gravity="center"
                android:id="@+id/secondary_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/details_purchase_button_spacing"
                app:cornerRadius="28dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="no">
            <TextView
                android:textColor="@color/gray_200"
                android:gravity="center"
                android:id="@+id/primary_discount_annotation"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Movies.Caption"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="12sp"
                android:gravity="center"
                android:id="@+id/primary_action"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="56dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                app:cornerRadius="28dp"
                app:iconGravity="textStart"
                app:iconTint="@color/black"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/companion_watch_cta"
                android:background="@drawable/action_panel_cta_background_material_light"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/companion_cta_height">
                <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
                    android:id="@+id/companion_watch_cta_play_icon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@null"
                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/companion_cta_text_size"
                    android:textColor="@color/m3_ref_palette_neutral20"
                    android:id="@+id/companion_watch_cta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_medium"
                    app:layout_constraintBottom_toTopOf="@+id/companion_watch_cta_subtitle_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    style="@style/TextAppearance.GoogleMaterial3.TitleMedium"/>
                <TextView
                    android:textSize="@dimen/companion_cta_subtitle_text_size"
                    android:textColor="@color/m3_ref_palette_neutral60"
                    android:id="@+id/companion_watch_cta_subtitle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_library"
                    android:fontFamily="@font/google_sans_medium"
                    android:letterSpacing="0.02"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/companion_watch_cta_text"
                    app:layout_constraintVertical_chainStyle="packed"
                    style="@style/TextAppearance.GoogleMaterial3.LabelMedium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textColor="@color/gray_200"
        android:textColorLink="@color/gray_200"
        android:gravity="center"
        android:id="@+id/also_watch_on"
        android:paddingTop="16dp"
        android:paddingBottom="52dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="-36dp"
        android:text="@string/also_watch_on_play_movies"
        style="@style/TextStyle.Movies.Caption"/>
</com.google.android.apps.play.movies.mobileux.screen.details.actionpanel.ActionPanelView>
