<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.player.infocards.actors.profile.ActorProfileView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:paddingTop="40dp"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_gravity="start"
        android:id="@+id/close"
        android:background="@color/gray_900"
        android:focusable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/accessibility_close_actor_page"
        android:layout_marginStart="24dp"
        videos:srcCompat="@drawable/ic_card_close_alt_24px"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:accessibilityTraversalAfter="@+id/close">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/profile_image"
            android:background="@drawable/actor_image_frame_background"
            android:layout_width="@dimen/actor_profile_image_size"
            android:layout_height="@dimen/actor_profile_image_size"
            android:foreground="@drawable/selectable_item_circular_background"/>
        <TextView
            android:textColor="@color/gray_050"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            style="@style/TextStyle.Movies.Headline.6"/>
        <TextView
            android:textColor="@color/gray_500"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/roles_and_biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            style="@style/TextStyle.Movies.Subtitle.2"/>
        <View
            android:id="@+id/divider_line"
            android:background="@color/thirty_percent_white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"/>
    </LinearLayout>
</com.google.android.apps.play.movies.mobileux.screen.player.infocards.actors.profile.ActorProfileView>
