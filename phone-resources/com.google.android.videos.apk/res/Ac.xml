<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.actionpanel.ActionPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/button_pair_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:importantForAccessibility="no"
    style="@style/DetailsPageSectionLayout">
    <TextView
        android:textColor="@color/gray_200"
        android:gravity="center"
        android:id="@+id/multiple_discounts_annotation"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discounts_available"
        android:contentDescription="@string/discounts_available"
        style="@style/TextStyle.Movies.Caption"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/secondary_action_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="no">
            <TextView
                android:textColor="@color/gray_200"
                android:gravity="center"
                android:id="@+id/secondary_discount_annotation"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Movies.Caption"/>
            <com.google.android.material.button.MaterialButton
                android:gravity="center"
                android:id="@+id/secondary_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/details_purchase_button_spacing"
                android:backgroundTint="?attr/movies_primary_button"
                style="@style/Widget.Replay.FillButton"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="no">
            <TextView
                android:textColor="@color/gray_200"
                android:gravity="center"
                android:id="@+id/primary_discount_annotation"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Movies.Caption"/>
            <com.google.android.material.button.MaterialButton
                android:gravity="center"
                android:id="@+id/primary_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:backgroundTint="?attr/movies_primary_button"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.apps.play.movies.mobileux.screen.details.actionpanel.ActionPanelView>
