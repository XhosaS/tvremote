<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.play.movies.mobileux.screen.details.familylibrary.FamilyLibraryView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/family_library_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/details_family_library_switch_section_min_height"
        style="@style/DetailsPageSectionLayout">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/gray_200"
            android:paddingEnd="@dimen/details_familylibrary_icon_padding_end"
            bind:srcCompat="@drawable/ic_family_library_24dp"/>
        <TextView
            android:textColor="@color/gray_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_family_library"
            android:importantForAccessibility="no"
            style="@style/TextStyle.Movies.Subhead.2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/familylibrary_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/movies_400"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:contentDescription="@string/section_family_library"
            android:switchPadding="@dimen/details_item_spacing"
            android:importantForAccessibility="yes"/>
    </LinearLayout>
    <View
        android:background="@color/details_section_border_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <include
        android:id="@+id/family_sharing_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/details_familylibrary_welcomecard_side_padding"
        android:layout_marginEnd="@dimen/details_familylibrary_welcomecard_side_padding"
        layout="@layout/welcomecard"/>
</com.google.android.apps.play.movies.mobileux.screen.details.familylibrary.FamilyLibraryView>
