<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:videos="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/bg_scrim"
        android:background="@color/playback_controller_scrim_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/right_panel"
        android:background="@drawable/side_panel_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/left_panel"
        android:background="@drawable/side_panel_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/scrub_scrim"
        android:background="#4d000000"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/replay__pal_gray_050"
        android:gravity="center"
        android:layout_gravity="top"
        android:id="@+id/feedback_text"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle.Movies.Headline.6"/>
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/rewind_10_s"
        android:src="@drawable/rewind_10_seconds"
        android:contentDescription="@string/accessibility_rewind_10s"
        style="@style/ReplayPlayMoviesSeekControlButton"/>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/pause"
        android:src="@drawable/player_pause_replay"
        android:scaleType="fitCenter"
        android:contentDescription="@string/accessibility_pause"
        android:accessibilityTraversalAfter="@+id/rewind_10_s"
        style="@style/ReplayPlayMoviesControlPlayPauseButton"/>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/play"
        android:src="@drawable/player_play_replay"
        android:scaleType="fitCenter"
        android:contentDescription="@string/accessibility_play"
        android:accessibilityTraversalAfter="@+id/rewind_10_s"
        style="@style/ReplayPlayMoviesControlPlayPauseButton"/>
    <ImageButton
        android:id="@+id/forward_10_s"
        android:src="@drawable/forward_10_seconds"
        android:contentDescription="@string/accessibility_forward_10s"
        style="@style/ReplayPlayMoviesSeekControlButton"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/control_bar"
        android:accessibilityTraversalAfter="@+id/forward_10_s"
        style="@style/ReplayPlayMoviesControlBar">
        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/player_margin_right"
            android:layout_marginBottom="@dimen/player_margin_bottom"
            android:layout_alignParentBottom="true">
            <TextView
                android:gravity="center"
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_bar_height"
                android:layout_marginLeft="@dimen/player_margin_progress_left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                style="@style/PlayMoviesControlBarTime"/>
            <TextView
                android:gravity="center"
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_bar_height"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/zoom_in"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:importantForAccessibility="no"
                style="@style/PlayMoviesControlBarTime"/>
            <ImageButton
                android:id="@+id/zoom_in"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/accessibility_fullscreen"
                style="@style/PlayMoviesControlZoomButton"/>
            <com.google.android.apps.play.movies.mobile.usecase.watch.TimeBar
                android:id="@+id/timebar"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/player_bar_height"
                android:layout_toLeftOf="@+id/duration"
                android:layout_toRightOf="@+id/progress"
                android:layout_alignParentTop="true"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                videos:adSegmentWidth="6dp"
                videos:bufferedBarColor="@color/replay__pal_gray_400"
                videos:durationTextView="@+id/duration"
                videos:playedBarColor="@color/gray_200"
                videos:pressedScrubberRadius="18dp"
                videos:progressBarColor="@color/replay__pal_gray_700"
                videos:progressTextView="@+id/progress"
                videos:railHeight="2.5dp"
                videos:scrubberRadius="10dp"
                videos:scrubberStateListDrawable="@drawable/scrubber"
                style="@style/PlayMoviesControlTimeBar"/>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/scrubber_overlay"/>
</merge>
