<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom|center_horizontal"
    android:id="@+id/episode_item_component"
    android:paddingLeft="@dimen/content_horizontal_spacing"
    android:paddingTop="@dimen/item_top_padding"
    android:paddingRight="@dimen/content_horizontal_spacing"
    android:paddingBottom="@dimen/item_bottom_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/content_horizontal_spacing"
    app:spanSize="1">
    <com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout
        android:id="@+id/thumbnail_frame"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/episode_thumbnail_height"
        android:layout_marginRight="@dimen/episode_thumbnail_end_margin"
        android:layout_alignParentLeft="true"
        app:aspectRatio="1.78"
        app:inset="@dimen/episode_item_inset">
        <com.google.android.apps.googletv.app.presentation.views.image.EntityImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cornerRadius="@dimen/episode_item_corner_radius"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/thumbnail_placeholder_text"
            android:padding="@dimen/episode_thumbnail_titled_padding"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            style="?attr/textAppearanceBodyLargeAutoSize"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.apps.googletv.app.presentation.views.playbutton.MediaDeviceAwarePlayButton
                android:id="@+id/play_overlay"
                android:focusable="false"
                android:visibility="gone"
                android:clickable="false"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:contentDescription="@string/play_button_content_description"/>
        </RelativeLayout>
    </com.google.android.libraries.material.aspectratio.FixedAspectRatioFrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/episode_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_toRightOf="@+id/thumbnail_frame">
        <TextView
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="@integer/max_lines_title"
            android:textDirection="locale"/>
        <TextView
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:ellipsize="end"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_view_info_text_margin_replay"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/list_item_view_dot_margin_replay"/>
        <TextView
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:id="@+id/last_watched"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_watched"/>
        <TextView
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:id="@+id/rental_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="right"
        android:id="@+id/tvod_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail_frame"
        android:layout_below="@+id/episode_item_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/tvod_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:gravity="center"
                android:layout_gravity="end|bottom"
                android:id="@+id/download_view"
                android:padding="@dimen/button_padding"
                android:layout_width="@dimen/download_size"
                android:layout_height="@dimen/download_size">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gtv_downloading_background"
                    android:importantForAccessibility="no"/>
                <include
                    android:layout_gravity="center"
                    android:id="@+id/download_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/button_elevation"
                    layout="@layout/gtv_download_animation_badge"/>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/purchase_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/purchase_button"
                    android:focusable="false"
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.GoogleTv.Button.ElevatedButton"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
