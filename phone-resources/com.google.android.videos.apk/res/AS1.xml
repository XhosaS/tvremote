<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginTop="@dimen/item_vertical_margin"
        android:layout_marginRight="@dimen/item_horizontal_margin"
        android:layout_marginBottom="@dimen/item_vertical_margin"
        android:text="@string/show_sharing_confirmation_message"
        android:layout_marginHorizontal="@dimen/item_horizontal_margin"
        android:layout_marginVertical="@dimen/item_vertical_margin"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:paddingTop="@dimen/item_vertical_margin"
        android:paddingBottom="@dimen/item_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginRight="@dimen/item_horizontal_margin"
        android:text="@string/dont_show_again"
        android:layout_marginHorizontal="@dimen/item_horizontal_margin"
        android:paddingVertical="@dimen/item_vertical_margin"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_horizontal_margin"
            android:layout_marginTop="@dimen/item_vertical_margin"
            android:layout_marginRight="@dimen/item_horizontal_margin"
            android:layout_marginBottom="@dimen/item_vertical_margin"
            android:text="@string/cancel"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="@dimen/item_horizontal_margin"
            android:layout_marginVertical="@dimen/item_vertical_margin"
            style="@style/Widget.GoogleTv.Button.OutlinedButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/got_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_horizontal_margin"
            android:layout_marginTop="@dimen/item_vertical_margin"
            android:layout_marginRight="@dimen/item_horizontal_margin"
            android:layout_marginBottom="@dimen/item_vertical_margin"
            android:text="@string/got_it"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="@dimen/item_horizontal_margin"
            android:layout_marginVertical="@dimen/item_vertical_margin"
            style="@style/Widget.GoogleTv.Button"/>
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>
