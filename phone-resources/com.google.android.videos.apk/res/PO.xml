<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rotten_tomatoes_rating_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/rotten_tomatoes_rating_image"
        android:layout_width="@dimen/rotten_tomatoes_rating_image_size"
        android:layout_height="@dimen/rotten_tomatoes_rating_image_size"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/rotten_tomatoes_rating_spacing_small"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/rotten_tomatoes_rating_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</merge>
